---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: string;
  keywords?: string;
  publishedTime?: string;
  modifiedTime?: string;
  author?: string;
  tags?: string[];
  noindex?: boolean;
}

const { title, description, image, type, keywords, publishedTime, modifiedTime, author, tags, noindex } = Astro.props;
---

<BaseLayout title={title} description={description} image={image} type={type} keywords={keywords} publishedTime={publishedTime} modifiedTime={modifiedTime} author={author} tags={tags} noindex={noindex}>
  <Header />
  <main class="flex-1 pt-16 lg:pt-20">
    <slot />
  </main>
  <Footer />
</BaseLayout>
