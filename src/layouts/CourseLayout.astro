---
import PageLayout from './PageLayout.astro';
import { formatDate } from '../lib/utils';
import { SITE, AUTHORS } from '../lib/constants';
import readingTime from 'reading-time';
import CourseProgress from '../components/course/CourseProgress.astro';
import CourseSidebar from '../components/course/CourseSidebar.astro';
import TableOfContents from '../components/course/TableOfContents.astro';
import LessonNav from '../components/course/LessonNav.astro';
import PremiumCTA from '../components/course/PremiumCTA.astro';
import BlogComments from '../components/blog/BlogComments';

interface Props {
  lesson: {
    id: string;
    body?: string;
    data: {
      title: string;
      description: string;
      module: number;
      moduleTitle: string;
      lesson: number;
      duration: string;
      difficulty: string;
      topics: string[];
      author: string;
      pubDate: Date;
    };
  };
  headings: { depth: number; slug: string; text: string }[];
  allLessons: Array<{
    id: string;
    data: {
      title: string;
      module: number;
      lesson: number;
      moduleTitle: string;
    };
  }>;
  prevLesson: { id: string; data: { title: string; module: number; lesson: number } } | null;
  nextLesson: { id: string; data: { title: string; module: number; lesson: number } } | null;
  currentIndex: number;
}

const { lesson, headings, allLessons, prevLesson, nextLesson, currentIndex } = Astro.props;
const rt = readingTime(lesson.body || '');
const authorInfo = AUTHORS[lesson.data.author] || { role: 'Team Member', bio: 'Writer at NativeFirst.' };

const articleKeywords = [
  ...lesson.data.topics,
  'NativeFirst', 'iOS development', 'SwiftUI', 'vibe coding',
].join(', ');

// Article JSON-LD
const articleSchema = {
  '@context': 'https://schema.org',
  '@type': ['Article', 'LearningResource'],
  headline: lesson.data.title,
  description: lesson.data.description,
  url: new URL(`/learn/${lesson.id}`, Astro.site).toString(),
  datePublished: lesson.data.pubDate.toISOString(),
  author: {
    '@type': 'Person',
    name: lesson.data.author,
    url: `${SITE.url}/about`,
  },
  publisher: {
    '@type': 'Organization',
    name: 'NativeFirst',
    url: SITE.url,
    logo: { '@type': 'ImageObject', url: new URL('/apple-touch-icon.png', Astro.site).toString() },
  },
  isPartOf: {
    '@type': 'Course',
    name: 'Vibe Code Native — Build Real iOS Apps with AI',
    url: `${SITE.url}/learn`,
    provider: {
      '@type': 'Organization',
      name: 'NativeFirst',
      url: SITE.url,
    },
  },
  educationalLevel: lesson.data.difficulty,
  learningResourceType: 'lesson',
  inLanguage: 'en',
  timeRequired: `PT${rt.minutes}M`,
  articleSection: `Module ${lesson.data.module}: ${lesson.data.moduleTitle}`,
  position: currentIndex + 1,
  keywords: articleKeywords,
  wordCount: rt.words,
};

// Breadcrumb JSON-LD
const breadcrumbSchema = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: [
    { '@type': 'ListItem', position: 1, name: 'Home', item: SITE.url },
    { '@type': 'ListItem', position: 2, name: 'Learn', item: `${SITE.url}/learn` },
    { '@type': 'ListItem', position: 3, name: `Module ${lesson.data.module}: ${lesson.data.moduleTitle}` },
    { '@type': 'ListItem', position: 4, name: lesson.data.title, item: new URL(`/learn/${lesson.id}`, Astro.site).toString() },
  ],
};

const difficultyColors: Record<string, string> = {
  beginner: 'bg-green-100 text-green-700 dark:bg-green-900/30 dark:text-green-400',
  intermediate: 'bg-yellow-100 text-yellow-700 dark:bg-yellow-900/30 dark:text-yellow-400',
  advanced: 'bg-red-100 text-red-700 dark:bg-red-900/30 dark:text-red-400',
};
---

<PageLayout
  title={`${lesson.data.title} — Vibe Code Native — ${SITE.name}`}
  description={lesson.data.description}
  type="article"
  keywords={articleKeywords}
  publishedTime={lesson.data.pubDate.toISOString()}
  author={lesson.data.author}
>
  <script type="application/ld+json" set:html={JSON.stringify(articleSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />

  <article class="py-12 sm:py-20 bg-white dark:bg-slate-950">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="lg:grid lg:grid-cols-[1fr_280px] lg:gap-12">
        <!-- Main content -->
        <div class="min-w-0">
          <!-- Breadcrumb -->
          <nav class="mb-6 text-sm" aria-label="Breadcrumb">
            <ol class="flex items-center gap-2 text-slate-500 dark:text-slate-400">
              <li><a href="/learn" class="hover:text-purple-600 dark:hover:text-purple-400 transition-colors">Learn</a></li>
              <li><span class="text-slate-300 dark:text-slate-600">/</span></li>
              <li><span>Module {lesson.data.module}</span></li>
              <li><span class="text-slate-300 dark:text-slate-600">/</span></li>
              <li class="text-slate-900 dark:text-white font-medium truncate">{lesson.data.title}</li>
            </ol>
          </nav>

          <!-- Header -->
          <header class="mb-10">
            <div class="flex items-center gap-2 mb-4 flex-wrap">
              <span class="px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-700 dark:bg-purple-900/30 dark:text-purple-400">
                Module {lesson.data.module} &middot; Lesson {lesson.data.lesson}
              </span>
              <span class={`px-2.5 py-0.5 rounded-full text-xs font-medium ${difficultyColors[lesson.data.difficulty] || difficultyColors.beginner}`}>
                {lesson.data.difficulty}
              </span>
            </div>

            <h1 class="font-display font-extrabold text-3xl sm:text-4xl text-slate-900 dark:text-white mb-4 leading-tight">
              {lesson.data.title}
            </h1>

            <div class="flex items-center gap-4 text-sm text-slate-500 dark:text-slate-400">
              <span class="flex items-center gap-1.5">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                {lesson.data.author}
              </span>
              <span class="w-1 h-1 rounded-full bg-slate-300 dark:bg-slate-600"></span>
              <span>{rt.text}</span>
            </div>
          </header>

          <!-- Content -->
          <div class="prose prose-lg dark:prose-invert prose-headings:font-display prose-headings:font-bold prose-a:text-purple-600 dark:prose-a:text-purple-400 prose-a:no-underline hover:prose-a:underline prose-img:rounded-xl prose-pre:bg-slate-900 prose-pre:border prose-pre:border-slate-800 max-w-none">
            <slot />
          </div>

          <!-- Premium CTA -->
          <PremiumCTA variant="inline" />

          <!-- Lesson Navigation -->
          <LessonNav prev={prevLesson} next={nextLesson} />

          <!-- Author Card -->
          <div class="mt-10 pt-10 border-t border-slate-200 dark:border-slate-800">
            <div class="flex items-center gap-5 p-6 rounded-2xl bg-slate-50 dark:bg-slate-900 border border-slate-200 dark:border-slate-800">
              <div class="w-16 h-16 rounded-full gradient-brand flex items-center justify-center flex-shrink-0">
                <span class="text-white font-display font-bold text-xl">
                  {lesson.data.author.charAt(0)}
                </span>
              </div>
              <div>
                <div class="flex items-center gap-2">
                  <p class="font-display font-semibold text-slate-900 dark:text-white">
                    {lesson.data.author}
                  </p>
                  <span class="px-2 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-700 dark:bg-purple-900/30 dark:text-purple-400">
                    {authorInfo.role}
                  </span>
                </div>
                <p class="text-sm text-slate-600 dark:text-slate-400 mt-1">
                  {authorInfo.bio}
                </p>
              </div>
            </div>
          </div>

          <!-- Comments -->
          <div id="comments">
            <BlogComments slug={lesson.id} client:visible />
          </div>

          <!-- Back to course -->
          <div class="text-center mt-12">
            <a
              href="/learn"
              class="inline-flex items-center gap-2 text-sm font-medium text-purple-600 dark:text-purple-400 hover:gap-3 transition-all"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
              </svg>
              Back to course
            </a>
          </div>
        </div>

        <!-- Sidebar (desktop) -->
        <aside class="hidden lg:block">
          <div class="sticky top-24 max-h-[calc(100vh-6rem)] flex flex-col">
            <div class="flex-shrink-0">
              <CourseProgress
                currentModule={lesson.data.module}
                currentLesson={lesson.data.lesson}
                totalLessons={allLessons.length}
                currentIndex={currentIndex}
              />
            </div>
            <div class="overflow-y-auto flex-1 min-h-0 sidebar-scroll">
              <CourseSidebar lessons={allLessons} currentId={lesson.id} />
              <TableOfContents headings={headings} />
            </div>
          </div>
        </aside>
      </div>
    </div>
  </article>
</PageLayout>
