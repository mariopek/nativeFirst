---
// Animated coding bot with mini terminal for the hero section
---

<div class="coding-bot-scene">
  <!-- Mini Terminal -->
  <div class="mini-terminal">
    <div class="terminal-bar">
      <span class="term-dot term-red"></span>
      <span class="term-dot term-yellow"></span>
      <span class="term-dot term-green"></span>
      <span class="term-title">main.swift</span>
    </div>
    <div class="terminal-body">
      <div class="code-line line-1"><span class="kw">struct</span> <span class="tp">NativeApp</span>: <span class="tp">View</span> &#123;</div>
      <div class="code-line line-2">&nbsp;&nbsp;<span class="kw">var</span> body: <span class="kw">some</span> <span class="tp">View</span> &#123;</div>
      <div class="code-line line-3">&nbsp;&nbsp;&nbsp;&nbsp;<span class="tp">Text</span>(<span class="str">"Ship it!"</span>)</div>
      <div class="code-line line-4">&nbsp;&nbsp;&#125;</div>
      <div class="code-line line-5">&#125; <span class="cm">// feels right at home</span></div>
      <div class="code-line line-cursor"><span class="cursor-blink">_</span></div>
    </div>
  </div>

  <!-- Bot Character -->
  <div class="bot-character">
    <div class="bot-arm bot-arm-l">
      <svg width="20" height="28" viewBox="0 0 20 28" fill="none">
        <path d="M18 2C18 2 8 8 4 16C2 20 2 26 2 26" stroke="currentColor" stroke-width="3" stroke-linecap="round"/>
      </svg>
    </div>
    <div class="bot-body-wrap">
      <div class="bot-antenna">
        <div class="bot-antenna-ball"></div>
        <div class="bot-antenna-stick"></div>
      </div>
      <div class="bot-head">
        <div class="bot-eye bot-eye-l"></div>
        <div class="bot-eye bot-eye-r"></div>
        <div class="bot-mouth"></div>
      </div>
      <div class="bot-torso">
        <div class="bot-screen">
          <div class="bot-heart">&lt;3</div>
        </div>
      </div>
    </div>
    <div class="bot-arm bot-arm-r">
      <svg width="20" height="28" viewBox="0 0 20 28" fill="none">
        <path d="M2 2C2 2 12 8 16 16C18 20 18 26 18 26" stroke="currentColor" stroke-width="3" stroke-linecap="round"/>
      </svg>
    </div>
  </div>
</div>

<style>
  .coding-bot-scene {
    display: flex;
    align-items: flex-end;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  /* === Mini Terminal === */
  .mini-terminal {
    width: 260px;
    background: #0d0d0d;
    border: 1px solid #2a2a2a;
    border-radius: 10px;
    overflow: hidden;
    font-family: var(--font-mono);
    font-size: 12px;
    line-height: 1.6;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
  }

  .terminal-bar {
    display: flex;
    align-items: center;
    gap: 6px;
    padding: 8px 12px;
    background: #161616;
    border-bottom: 1px solid #2a2a2a;
  }

  .term-dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
  }
  .term-red { background: #ff5f57; }
  .term-yellow { background: #febc2e; }
  .term-green { background: #28c840; }

  .term-title {
    margin-left: auto;
    font-size: 10px;
    color: #666;
  }

  .terminal-body {
    padding: 12px 14px;
    min-height: 110px;
  }

  .code-line {
    opacity: 0;
    white-space: nowrap;
    color: #c9d1d9;
  }

  .kw { color: #ff7b72; }
  .tp { color: #79c0ff; }
  .str { color: #a5d6ff; }
  .cm { color: #555; }

  .line-1 { animation: typeLine 0.3s ease forwards 0.5s; }
  .line-2 { animation: typeLine 0.3s ease forwards 1.2s; }
  .line-3 { animation: typeLine 0.3s ease forwards 1.9s; }
  .line-4 { animation: typeLine 0.3s ease forwards 2.4s; }
  .line-5 { animation: typeLine 0.3s ease forwards 2.8s; }

  .line-cursor {
    opacity: 0;
    animation: typeLine 0.3s ease forwards 3.2s;
  }

  .cursor-blink {
    animation: blink 1s step-end infinite 3.5s;
    color: #ff6e00;
    font-weight: bold;
  }

  @keyframes typeLine {
    from {
      opacity: 0;
      transform: translateX(-4px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0; }
  }

  /* === Bot Character === */
  .bot-character {
    display: flex;
    align-items: flex-end;
    gap: 0;
    animation: botBounce 3.5s ease forwards;
    position: relative;
    bottom: 0;
  }

  .bot-body-wrap {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  /* Antenna */
  .bot-antenna {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: -2px;
  }
  .bot-antenna-ball {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #ff6e00;
    animation: antennaPulse 2s ease-in-out infinite 3.5s;
  }
  .bot-antenna-stick {
    width: 2px;
    height: 10px;
    background: #555;
  }

  /* Head */
  .bot-head {
    width: 48px;
    height: 40px;
    background: #1a1a1a;
    border: 2px solid #333;
    border-radius: 12px 12px 8px 8px;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
  }

  .bot-eye {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #ff6e00;
    animation: eyeGlow 3s ease-in-out infinite;
    position: relative;
    top: -3px;
  }
  .bot-eye-l { animation-delay: 0s; }
  .bot-eye-r { animation-delay: 0.1s; }

  .bot-mouth {
    position: absolute;
    bottom: 7px;
    left: 50%;
    transform: translateX(-50%);
    width: 14px;
    height: 6px;
    border-bottom: 2px solid #ff6e00;
    border-radius: 0 0 8px 8px;
    animation: mouthSmile 3.5s ease forwards;
  }

  /* Torso */
  .bot-torso {
    width: 40px;
    height: 30px;
    background: #1a1a1a;
    border: 2px solid #333;
    border-top: none;
    border-radius: 0 0 10px 10px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .bot-screen {
    width: 20px;
    height: 14px;
    background: #111;
    border: 1px solid #333;
    border-radius: 2px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .bot-heart {
    font-size: 8px;
    color: #ff6e00;
    font-family: var(--font-mono);
    opacity: 0;
    animation: heartAppear 0.5s ease forwards 3.5s;
  }

  /* Arms */
  .bot-arm {
    color: #555;
    align-self: flex-end;
    margin-bottom: 4px;
  }
  .bot-arm-l {
    animation: armTypeL 0.4s ease-in-out infinite alternate;
    transform-origin: top right;
  }
  .bot-arm-r {
    animation: armTypeR 0.4s ease-in-out infinite alternate-reverse;
    transform-origin: top left;
  }

  @keyframes armTypeL {
    from { transform: translateY(0px); }
    to { transform: translateY(3px); }
  }
  @keyframes armTypeR {
    from { transform: translateY(3px); }
    to { transform: translateY(0px); }
  }

  @keyframes botBounce {
    0%, 80% { transform: translateY(0); }
    85% { transform: translateY(-12px); }
    90% { transform: translateY(0); }
    93% { transform: translateY(-6px); }
    96% { transform: translateY(0); }
    98% { transform: translateY(-3px); }
    100% { transform: translateY(0); }
  }

  @keyframes eyeGlow {
    0%, 100% { box-shadow: 0 0 4px rgba(255, 110, 0, 0.3); }
    50% { box-shadow: 0 0 8px rgba(255, 110, 0, 0.6); }
  }

  @keyframes antennaPulse {
    0%, 100% { box-shadow: 0 0 4px rgba(255, 110, 0, 0.4); transform: scale(1); }
    50% { box-shadow: 0 0 10px rgba(255, 110, 0, 0.8); transform: scale(1.2); }
  }

  @keyframes mouthSmile {
    0%, 85% { width: 14px; height: 6px; }
    95%, 100% { width: 18px; height: 8px; }
  }

  @keyframes heartAppear {
    from { opacity: 0; transform: scale(0.5); }
    to { opacity: 1; transform: scale(1); }
  }

  /* Responsive */
  @media (max-width: 480px) {
    .mini-terminal {
      width: 200px;
      font-size: 10px;
    }
    .coding-bot-scene {
      gap: 0.5rem;
    }
  }
</style>
