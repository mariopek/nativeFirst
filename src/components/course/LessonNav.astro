---
interface Props {
  prev: { id: string; data: { title: string; module: number; lesson: number } } | null;
  next: { id: string; data: { title: string; module: number; lesson: number } } | null;
}

const { prev, next } = Astro.props;
---

<nav class="flex items-stretch gap-4 mt-12 pt-8 border-t border-border" aria-label="Lesson navigation">
  {prev ? (
    <a
      href={`/learn/${prev.id}`}
      class="flex-1 group flex items-center gap-3 p-4 rounded-xl border border-border hover:border-accent/40 transition-colors"
    >
      <svg class="w-5 h-5 text-text-muted group-hover:text-accent transition-colors flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      <div class="min-w-0">
        <p class="text-xs text-text-muted mb-0.5">Previous</p>
        <p class="text-sm font-medium text-white truncate group-hover:text-accent transition-colors">
          {prev.data.title}
        </p>
      </div>
    </a>
  ) : (
    <div class="flex-1"></div>
  )}

  {next ? (
    <a
      href={`/learn/${next.id}`}
      class="flex-1 group flex items-center justify-end gap-3 p-4 rounded-xl border border-border hover:border-accent/40 hover:bg-accent/5 transition-colors text-right"
    >
      <div class="min-w-0">
        <p class="text-xs text-text-muted mb-0.5">Next</p>
        <p class="text-sm font-medium text-white truncate group-hover:text-accent transition-colors">
          {next.data.title}
        </p>
      </div>
      <svg class="w-5 h-5 text-text-muted group-hover:text-accent transition-colors flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </a>
  ) : (
    <div class="flex-1"></div>
  )}
</nav>
