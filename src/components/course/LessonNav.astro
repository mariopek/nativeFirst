---
interface Props {
  prev: { id: string; data: { title: string; module: number; lesson: number } } | null;
  next: { id: string; data: { title: string; module: number; lesson: number } } | null;
}

const { prev, next } = Astro.props;
---

<nav class="flex items-stretch gap-4 mt-12 pt-8 border-t border-slate-200 dark:border-slate-800" aria-label="Lesson navigation">
  {prev ? (
    <a
      href={`/learn/${prev.id}`}
      class="flex-1 group flex items-center gap-3 p-4 rounded-xl border border-slate-200 dark:border-slate-800 hover:border-purple-300 dark:hover:border-purple-700 transition-colors"
    >
      <svg class="w-5 h-5 text-slate-400 group-hover:text-purple-500 transition-colors flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      <div class="min-w-0">
        <p class="text-xs text-slate-500 dark:text-slate-500 mb-0.5">Previous</p>
        <p class="text-sm font-medium text-slate-900 dark:text-white truncate group-hover:text-purple-600 dark:group-hover:text-purple-400 transition-colors">
          {prev.data.title}
        </p>
      </div>
    </a>
  ) : (
    <div class="flex-1"></div>
  )}

  {next ? (
    <a
      href={`/learn/${next.id}`}
      class="flex-1 group flex items-center justify-end gap-3 p-4 rounded-xl border border-slate-200 dark:border-slate-800 hover:border-purple-300 dark:hover:border-purple-700 hover:bg-purple-50/50 dark:hover:bg-purple-900/10 transition-colors text-right"
    >
      <div class="min-w-0">
        <p class="text-xs text-slate-500 dark:text-slate-500 mb-0.5">Next</p>
        <p class="text-sm font-medium text-slate-900 dark:text-white truncate group-hover:text-purple-600 dark:group-hover:text-purple-400 transition-colors">
          {next.data.title}
        </p>
      </div>
      <svg class="w-5 h-5 text-slate-400 group-hover:text-purple-500 transition-colors flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </a>
  ) : (
    <div class="flex-1"></div>
  )}
</nav>
