---
import LockedLessonAuth from './LockedLessonAuth';

interface Props {
  title: string;
  module: number;
  lesson: number;
  moduleTitle: string;
  description: string;
  duration: string;
  difficulty: string;
  courseSlug: string;
}

const { title, module, lesson, moduleTitle, description, duration, difficulty, courseSlug } = Astro.props;

const difficultyColors: Record<string, string> = {
  beginner: 'bg-accent-green/10 text-accent-green',
  intermediate: 'bg-accent-yellow/10 text-accent-yellow',
  advanced: 'bg-accent-pink/10 text-accent-pink',
};
---

<div class="py-12 sm:py-20 bg-bg">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Breadcrumb -->
    <nav class="mb-6 text-sm" aria-label="Breadcrumb">
      <ol class="flex items-center gap-2 text-text-muted">
        <li><a href="/learn" class="hover:text-accent transition-colors">Learn</a></li>
        <li><span class="text-border">/</span></li>
        <li><a href={`/learn/${courseSlug}`} class="hover:text-accent transition-colors">Ship Native</a></li>
        <li><span class="text-border">/</span></li>
        <li class="text-white font-medium truncate">{title}</li>
      </ol>
    </nav>

    <!-- Header -->
    <header class="mb-8">
      <div class="flex items-center gap-2 mb-4 flex-wrap">
        <span class="tag">
          Module {module} &middot; Lesson {lesson}
        </span>
        <span class={`px-2.5 py-0.5 rounded-full text-xs font-medium ${difficultyColors[difficulty] || difficultyColors.beginner}`}>
          {difficulty}
        </span>
        <span class="px-2.5 py-0.5 rounded-full text-xs font-medium bg-accent-yellow/10 text-accent-yellow">
          Premium
        </span>
      </div>

      <h1 class="font-display font-black tracking-tight text-3xl sm:text-4xl text-white mb-4 leading-tight">
        {title}
      </h1>

      <p class="text-lg text-text-muted">
        {description}
      </p>
    </header>

    <!-- Locked Content Preview -->
    <div class="relative">
      <!-- Blurred fake content -->
      <div class="select-none pointer-events-none" aria-hidden="true">
        <div class="space-y-4 blur-sm opacity-50">
          <div class="h-6 bg-surface-2 rounded w-3/4"></div>
          <div class="h-4 bg-surface-2 rounded w-full"></div>
          <div class="h-4 bg-surface-2 rounded w-5/6"></div>
          <div class="h-4 bg-surface-2 rounded w-full"></div>
          <div class="h-32 bg-surface-2 rounded"></div>
          <div class="h-4 bg-surface-2 rounded w-4/5"></div>
          <div class="h-4 bg-surface-2 rounded w-full"></div>
          <div class="h-4 bg-surface-2 rounded w-3/4"></div>
          <div class="h-48 bg-surface-2 rounded"></div>
          <div class="h-4 bg-surface-2 rounded w-full"></div>
          <div class="h-4 bg-surface-2 rounded w-2/3"></div>
        </div>
      </div>

      <!-- Overlay -->
      <div class="absolute inset-0 flex items-start justify-center pt-8">
        <div class="max-w-md w-full space-y-6">
          <!-- Lock icon card -->
          <div class="rounded-2xl border border-border bg-bg p-8 text-center shadow-xl shadow-black/20">
            <div class="w-16 h-16 rounded-2xl bg-accent-yellow/10 flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-accent-yellow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
              </svg>
            </div>

            <h2 class="font-display font-bold text-xl text-white mb-2">
              This lesson is part of Ship Native
            </h2>
            <p class="text-sm text-text-muted mb-6">
              Get full access to all 26 lessons and build a production iOS app from scratch.
            </p>

            <a
              href={`/learn/${courseSlug}`}
              class="inline-flex items-center gap-2 px-8 py-3 rounded-full bg-gradient-to-r from-amber-500 to-orange-500 text-white font-semibold shadow-lg shadow-amber-500/25 hover:shadow-amber-500/40 transition-shadow"
            >
              Unlock Course â€” $79
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </a>
          </div>

          <!-- Login section -->
          <div class="text-center">
            <p class="text-sm text-text-muted mb-3">
              Already purchased? Log in to access.
            </p>
            <LockedLessonAuth client:visible />
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
