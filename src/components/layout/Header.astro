---
import { NAV_LINKS } from '../../lib/constants';
import ThemeToggle from './ThemeToggle';
---

<header
  id="main-header"
  class="fixed top-0 left-0 right-0 z-50 transition-all duration-300"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16 lg:h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2 group">
        <img src="/logo.png" alt="NativeFirst" class="h-8 w-8 rounded-lg" />
        <span class="font-display font-bold text-lg text-slate-900 dark:text-white group-hover:text-purple-600 dark:group-hover:text-purple-400 transition-colors">
          NativeFirst
        </span>
      </a>

      <!-- Desktop Nav -->
      <nav class="hidden lg:flex items-center gap-1">
        {NAV_LINKS.map((link) => (
          link.children ? (
            <div class="relative group">
              <button class="flex items-center gap-1 px-4 py-2 text-sm font-medium text-slate-600 dark:text-slate-300 hover:text-purple-600 dark:hover:text-purple-400 transition-colors rounded-lg">
                {link.label}
                <svg class="w-4 h-4 transition-transform group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </button>
              <div class="absolute top-full left-0 pt-2 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
                <div class="bg-white dark:bg-slate-800 rounded-xl shadow-xl border border-slate-200 dark:border-slate-700 p-2 min-w-[220px]">
                  {link.children.map((child) => (
                    <a
                      href={child.href}
                      class="flex flex-col px-4 py-3 rounded-lg hover:bg-slate-50 dark:hover:bg-slate-700 transition-colors"
                    >
                      <span class="text-sm font-medium text-slate-900 dark:text-white">{child.label}</span>
                      <span class="text-xs text-slate-500 dark:text-slate-400">{child.description}</span>
                    </a>
                  ))}
                </div>
              </div>
            </div>
          ) : (
            <a
              href={link.href}
              class="px-4 py-2 text-sm font-medium text-slate-600 dark:text-slate-300 hover:text-purple-600 dark:hover:text-purple-400 transition-colors rounded-lg"
            >
              {link.label}
            </a>
          )
        ))}
      </nav>

      <!-- Right side -->
      <div class="flex items-center gap-3">
        <ThemeToggle client:load />

        <!-- Mobile menu button -->
        <button
          id="mobile-menu-btn"
          class="lg:hidden p-2 rounded-lg text-slate-600 dark:text-slate-300 hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors"
          aria-label="Toggle menu"
        >
          <svg id="menu-open-icon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <svg id="menu-close-icon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile menu -->
  <div
    id="mobile-menu"
    class="lg:hidden hidden absolute top-full left-0 right-0 glass border-b border-slate-200 dark:border-slate-700"
  >
    <nav class="max-w-7xl mx-auto px-4 py-4 flex flex-col gap-1">
      {NAV_LINKS.map((link) => (
        link.children ? (
          <>
            {link.children.map((child) => (
              <a
                href={child.href}
                class="px-4 py-3 rounded-lg text-sm font-medium text-slate-600 dark:text-slate-300 hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors"
              >
                {child.label}
                <span class="text-xs text-slate-400 ml-2">{child.description}</span>
              </a>
            ))}
          </>
        ) : (
          <a
            href={link.href}
            class="px-4 py-3 rounded-lg text-sm font-medium text-slate-600 dark:text-slate-300 hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors"
          >
            {link.label}
          </a>
        )
      ))}
    </nav>
  </div>
</header>

<script>
  function initHeader() {
    const header = document.getElementById('main-header');
    const menuBtn = document.getElementById('mobile-menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');
    const openIcon = document.getElementById('menu-open-icon');
    const closeIcon = document.getElementById('menu-close-icon');

    if (!header || !menuBtn || !mobileMenu || !openIcon || !closeIcon) return;

    // Scroll effect
    let lastScroll = 0;
    function onScroll() {
      const scrollY = window.scrollY;
      if (scrollY > 50) {
        header.classList.add('glass', 'border-b', 'border-slate-200', 'dark:border-slate-700');
      } else {
        header.classList.remove('glass', 'border-b', 'border-slate-200', 'dark:border-slate-700');
      }
      lastScroll = scrollY;
    }
    window.addEventListener('scroll', onScroll, { passive: true });
    onScroll();

    // Mobile menu toggle
    menuBtn.addEventListener('click', () => {
      const isOpen = !mobileMenu.classList.contains('hidden');
      mobileMenu.classList.toggle('hidden');
      openIcon.classList.toggle('hidden');
      closeIcon.classList.toggle('hidden');
    });

    // Close mobile menu on link click
    mobileMenu.querySelectorAll('a').forEach((link) => {
      link.addEventListener('click', () => {
        mobileMenu.classList.add('hidden');
        openIcon.classList.remove('hidden');
        closeIcon.classList.add('hidden');
      });
    });
  }

  initHeader();
  document.addEventListener('astro:page-load', initHeader);
</script>
