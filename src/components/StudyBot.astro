---
// Study bot at a desk with a monitor showing NativeFirst course — for learn hero
---

<div class="study-scene">
  <!-- Desk -->
  <div class="study-desk">
    <!-- Monitor -->
    <div class="study-monitor">
      <div class="monitor-bezel">
        <div class="monitor-screen">
          <!-- Browser chrome -->
          <div class="monitor-bar">
            <span class="m-dot m-red"></span>
            <span class="m-dot m-yellow"></span>
            <span class="m-dot m-green"></span>
            <span class="m-url">nativefirst.app</span>
          </div>
          <!-- Site content -->
          <div class="monitor-content">
            <div class="mc-nav"></div>
            <div class="mc-hero">
              <div class="mc-title"></div>
              <div class="mc-subtitle"></div>
            </div>
            <div class="mc-cards">
              <div class="mc-card mc-card-1"></div>
              <div class="mc-card mc-card-2"></div>
            </div>
            <!-- Course progress bar -->
            <div class="mc-progress-wrap">
              <div class="mc-progress-bar">
                <div class="mc-progress-fill"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="monitor-stand"></div>
      <div class="monitor-base"></div>
    </div>

    <!-- Coffee mug -->
    <div class="coffee-mug">
      <div class="mug-body">
        <div class="mug-label">&lt;/&gt;</div>
      </div>
      <div class="mug-handle"></div>
      <div class="coffee-steam">
        <div class="steam s1"></div>
        <div class="steam s2"></div>
        <div class="steam s3"></div>
      </div>
    </div>

    <!-- Bot character at desk -->
    <div class="study-bot">
      <div class="sb-arm sb-arm-l">
        <svg width="16" height="22" viewBox="0 0 16 22" fill="none">
          <path d="M14 2C14 2 6 6 4 12C3 16 3 20 3 20" stroke="currentColor" stroke-width="2.5" stroke-linecap="round"/>
        </svg>
      </div>
      <div class="sb-main">
        <div class="sb-antenna">
          <div class="sb-antenna-ball"></div>
          <div class="sb-antenna-stick"></div>
        </div>
        <div class="sb-head">
          <div class="sb-eye sb-eye-l"></div>
          <div class="sb-eye sb-eye-r"></div>
          <div class="sb-mouth"></div>
        </div>
        <div class="sb-body">
          <div class="sb-screen">
            <div class="sb-screen-check">✓</div>
          </div>
        </div>
      </div>
      <div class="sb-arm sb-arm-r">
        <svg width="16" height="22" viewBox="0 0 16 22" fill="none">
          <path d="M2 2C2 2 10 6 12 12C13 16 13 20 13 20" stroke="currentColor" stroke-width="2.5" stroke-linecap="round"/>
        </svg>
      </div>
    </div>

    <!-- Notebook -->
    <div class="study-notebook">
      <div class="nb-page">
        <div class="nb-line nb-l1"></div>
        <div class="nb-line nb-l2"></div>
        <div class="nb-line nb-l3"></div>
      </div>
      <div class="nb-pen"></div>
    </div>
  </div>

  <!-- Desk surface -->
  <div class="desk-surface"></div>
</div>

<style>
  .study-scene {
    position: relative;
    width: 300px;
    height: 160px;
    margin: 0 auto 1.5rem;
  }

  /* === Desk area === */
  .study-desk {
    position: absolute;
    bottom: 12px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    align-items: flex-end;
    gap: 8px;
  }

  /* === Monitor === */
  .study-monitor {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .monitor-bezel {
    width: 120px;
    height: 80px;
    background: #1a1a1a;
    border: 2px solid #333;
    border-radius: 6px;
    padding: 3px;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.4), 0 0 20px rgba(255, 110, 0, 0.05);
  }
  .monitor-screen {
    width: 100%;
    height: 100%;
    background: #0a0a0a;
    border-radius: 3px;
    overflow: hidden;
  }
  .monitor-bar {
    display: flex;
    align-items: center;
    gap: 3px;
    padding: 3px 5px;
    background: #161616;
    border-bottom: 1px solid #222;
  }
  .m-dot {
    width: 5px;
    height: 5px;
    border-radius: 50%;
  }
  .m-red { background: #ff5f57; }
  .m-yellow { background: #febc2e; }
  .m-green { background: #28c840; }
  .m-url {
    font-family: var(--font-mono);
    font-size: 5px;
    color: #888;
    margin-left: auto;
  }

  /* Site mockup content */
  .monitor-content {
    padding: 4px;
    display: flex;
    flex-direction: column;
    gap: 3px;
  }
  .mc-nav {
    height: 3px;
    background: #222;
    border-radius: 1px;
  }
  .mc-hero {
    display: flex;
    flex-direction: column;
    gap: 2px;
    padding: 3px 0;
  }
  .mc-title {
    width: 70%;
    height: 4px;
    background: linear-gradient(90deg, #ff6e00, #ffd600);
    border-radius: 1px;
    margin: 0 auto;
    animation: contentShimmer 3s ease-in-out infinite;
  }
  .mc-subtitle {
    width: 50%;
    height: 2px;
    background: #555;
    border-radius: 1px;
    margin: 0 auto;
  }
  .mc-cards {
    display: flex;
    gap: 3px;
  }
  .mc-card {
    flex: 1;
    height: 14px;
    border: 1px solid #333;
    border-radius: 2px;
    background: #111;
  }
  .mc-card-1 {
    border-color: rgba(255, 110, 0, 0.3);
    animation: cardGlow 4s ease-in-out infinite;
  }
  .mc-card-2 {
    opacity: 0.5;
  }

  /* Course progress bar */
  .mc-progress-wrap {
    padding: 2px 0;
  }
  .mc-progress-bar {
    height: 3px;
    background: #222;
    border-radius: 2px;
    overflow: hidden;
  }
  .mc-progress-fill {
    width: 0%;
    height: 100%;
    background: linear-gradient(90deg, #ff6e00, #00e676);
    border-radius: 2px;
    animation: progressFill 4s ease forwards 1s;
  }

  .monitor-stand {
    width: 8px;
    height: 10px;
    background: #333;
  }
  .monitor-base {
    width: 30px;
    height: 4px;
    background: #333;
    border-radius: 2px;
  }

  @keyframes contentShimmer {
    0%, 100% { opacity: 0.8; }
    50% { opacity: 1; }
  }
  @keyframes cardGlow {
    0%, 100% { border-color: rgba(255, 110, 0, 0.2); }
    50% { border-color: rgba(255, 110, 0, 0.5); box-shadow: 0 0 4px rgba(255, 110, 0, 0.1); }
  }
  @keyframes progressFill {
    0% { width: 0%; }
    100% { width: 65%; }
  }

  /* === Coffee Mug === */
  .coffee-mug {
    position: relative;
    align-self: flex-end;
    margin-bottom: 0;
    margin-left: -2px;
  }
  .mug-body {
    width: 16px;
    height: 18px;
    background: #2a2a2a;
    border: 1.5px solid #444;
    border-radius: 0 0 4px 4px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .mug-label {
    font-family: var(--font-mono);
    font-size: 5px;
    color: #ff6e00;
  }
  .mug-handle {
    position: absolute;
    right: -5px;
    top: 4px;
    width: 6px;
    height: 10px;
    border: 1.5px solid #444;
    border-left: none;
    border-radius: 0 4px 4px 0;
  }

  /* Steam */
  .coffee-steam {
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 3px;
  }
  .steam {
    width: 2px;
    height: 8px;
    background: rgba(255, 255, 255, 0.08);
    border-radius: 1px;
    animation: steamRise 2s ease-in-out infinite;
  }
  .s1 { animation-delay: 0s; }
  .s2 { animation-delay: 0.4s; height: 10px; }
  .s3 { animation-delay: 0.8s; }

  @keyframes steamRise {
    0% { opacity: 0; transform: translateY(4px) scaleY(0.5); }
    40% { opacity: 0.3; }
    100% { opacity: 0; transform: translateY(-6px) scaleY(1.2); }
  }

  /* === Bot Character === */
  .study-bot {
    display: flex;
    align-items: flex-end;
    gap: 0;
    animation: studyNod 4s ease-in-out infinite;
  }
  .sb-main {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  /* Antenna */
  .sb-antenna {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: -2px;
  }
  .sb-antenna-ball {
    width: 7px;
    height: 7px;
    border-radius: 50%;
    background: #00e676;
    box-shadow: 0 0 6px rgba(0, 230, 118, 0.4);
    animation: studyPulse 2s ease-in-out infinite;
  }
  .sb-antenna-stick {
    width: 2px;
    height: 8px;
    background: #555;
  }

  /* Head */
  .sb-head {
    width: 42px;
    height: 34px;
    background: #1a1a1a;
    border: 2px solid #333;
    border-radius: 10px 10px 8px 8px;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
  }
  .sb-eye {
    width: 7px;
    height: 7px;
    border-radius: 50%;
    background: #00e676;
    position: relative;
    top: -3px;
    animation: eyeFocus 4s ease-in-out infinite;
  }
  .sb-eye-l { animation-delay: 0s; }
  .sb-eye-r { animation-delay: 0.1s; }

  .sb-mouth {
    position: absolute;
    bottom: 6px;
    left: 50%;
    transform: translateX(-50%);
    width: 6px;
    height: 6px;
    border: 2px solid #00e676;
    border-radius: 50%;
    border-top-color: transparent;
    border-left-color: transparent;
    transform: translateX(-50%) rotate(45deg);
  }

  /* Body */
  .sb-body {
    width: 36px;
    height: 26px;
    background: #1a1a1a;
    border: 2px solid #333;
    border-top: none;
    border-radius: 0 0 8px 8px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .sb-screen {
    width: 18px;
    height: 12px;
    background: #111;
    border: 1px solid #333;
    border-radius: 2px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .sb-screen-check {
    font-size: 8px;
    color: #00e676;
    font-family: var(--font-mono);
    opacity: 0;
    animation: checkAppear 4s ease infinite;
  }

  /* Arms */
  .sb-arm {
    color: #555;
    align-self: flex-end;
    margin-bottom: 2px;
  }

  @keyframes studyNod {
    0%, 100% { transform: translateY(0); }
    30% { transform: translateY(-2px); }
    60% { transform: translateY(0); }
  }
  @keyframes studyPulse {
    0%, 100% { box-shadow: 0 0 4px rgba(0, 230, 118, 0.3); }
    50% { box-shadow: 0 0 10px rgba(0, 230, 118, 0.7); }
  }
  @keyframes eyeFocus {
    0%, 100% { transform: translateX(0); }
    30%, 60% { transform: translateX(2px); }
  }
  @keyframes checkAppear {
    0%, 40% { opacity: 0; transform: scale(0.5); }
    50%, 80% { opacity: 1; transform: scale(1); }
    90%, 100% { opacity: 0; transform: scale(0.5); }
  }

  /* === Notebook === */
  .study-notebook {
    position: relative;
    align-self: flex-end;
    margin-bottom: 0;
  }
  .nb-page {
    width: 24px;
    height: 30px;
    background: #1a1a1a;
    border: 1.5px solid #333;
    border-radius: 2px;
    padding: 4px 3px;
    display: flex;
    flex-direction: column;
    gap: 3px;
    transform: rotate(5deg);
  }
  .nb-line {
    height: 1.5px;
    border-radius: 1px;
    opacity: 0;
    animation: noteLine 5s ease infinite;
  }
  .nb-l1 { width: 90%; background: #555; animation-delay: 0.5s; }
  .nb-l2 { width: 70%; background: #555; animation-delay: 1.5s; }
  .nb-l3 { width: 80%; background: #ff6e00; animation-delay: 2.5s; }

  .nb-pen {
    position: absolute;
    bottom: -2px;
    right: -6px;
    width: 3px;
    height: 18px;
    background: linear-gradient(to bottom, #ff6e00, #ffd600);
    border-radius: 1px 1px 0 0;
    transform: rotate(30deg);
  }

  @keyframes noteLine {
    0%, 10% { opacity: 0; width: 0; }
    20%, 80% { opacity: 0.7; width: 90%; }
    90%, 100% { opacity: 0; }
  }

  /* === Desk surface === */
  .desk-surface {
    position: absolute;
    bottom: 0;
    left: 5%;
    right: 5%;
    height: 12px;
    background: linear-gradient(to bottom, #2a2015, #1e180f);
    border-radius: 4px 4px 0 0;
    border-top: 1px solid #3a3020;
  }

  /* Responsive */
  @media (max-width: 480px) {
    .study-scene {
      width: 240px;
      height: 140px;
    }
    .monitor-bezel {
      width: 100px;
      height: 68px;
    }
  }
</style>
