---
// Beach bot reading on the sand â€” for the blog hero
---

<div class="beach-scene">
  <!-- Sun -->
  <div class="beach-sun">
    <div class="sun-body"></div>
    <div class="sun-ray ray-1"></div>
    <div class="sun-ray ray-2"></div>
    <div class="sun-ray ray-3"></div>
    <div class="sun-ray ray-4"></div>
    <div class="sun-ray ray-5"></div>
  </div>

  <!-- Palm tree -->
  <div class="palm-tree">
    <div class="palm-trunk"></div>
    <div class="palm-leaf leaf-1"></div>
    <div class="palm-leaf leaf-2"></div>
    <div class="palm-leaf leaf-3"></div>
  </div>

  <!-- Bot on towel -->
  <div class="beach-bot-wrap">
    <!-- Towel / blanket -->
    <div class="beach-towel"></div>

    <!-- Bot character -->
    <div class="beach-bot">
      <div class="bb-antenna">
        <div class="bb-antenna-ball"></div>
        <div class="bb-antenna-stick"></div>
      </div>
      <div class="bb-head">
        <div class="bb-sunglasses">
          <div class="bb-lens bb-lens-l"></div>
          <div class="bb-bridge"></div>
          <div class="bb-lens bb-lens-r"></div>
        </div>
        <div class="bb-mouth"></div>
      </div>
      <div class="bb-body">
        <div class="bb-screen">
          <div class="bb-screen-line l1"></div>
          <div class="bb-screen-line l2"></div>
          <div class="bb-screen-line l3"></div>
        </div>
      </div>
    </div>

    <!-- Tablet / book the bot is reading -->
    <div class="bb-tablet">
      <div class="bb-tablet-screen">
        <div class="bb-tab-line tl1"></div>
        <div class="bb-tab-line tl2"></div>
        <div class="bb-tab-line tl3"></div>
        <div class="bb-tab-line tl4"></div>
        <div class="bb-tab-cursor"></div>
      </div>
    </div>
  </div>

  <!-- Waves -->
  <div class="beach-waves">
    <div class="wave wave-1"></div>
    <div class="wave wave-2"></div>
  </div>

  <!-- Sand -->
  <div class="beach-sand"></div>
</div>

<style>
  .beach-scene {
    position: relative;
    width: 280px;
    height: 140px;
    margin: 0 auto 1.5rem;
  }

  /* === Sun === */
  .beach-sun {
    position: absolute;
    top: 4px;
    right: 30px;
    animation: sunFloat 4s ease-in-out infinite;
  }
  .sun-body {
    width: 24px;
    height: 24px;
    border-radius: 50%;
    background: #ffd600;
    box-shadow: 0 0 16px rgba(255, 214, 0, 0.5), 0 0 40px rgba(255, 214, 0, 0.2);
  }
  .sun-ray {
    position: absolute;
    width: 2px;
    height: 8px;
    background: #ffd600;
    left: 50%;
    top: 50%;
    transform-origin: center;
    border-radius: 1px;
    opacity: 0.6;
  }
  .ray-1 { transform: translate(-50%, -50%) rotate(0deg) translateY(-18px); }
  .ray-2 { transform: translate(-50%, -50%) rotate(72deg) translateY(-18px); }
  .ray-3 { transform: translate(-50%, -50%) rotate(144deg) translateY(-18px); }
  .ray-4 { transform: translate(-50%, -50%) rotate(216deg) translateY(-18px); }
  .ray-5 { transform: translate(-50%, -50%) rotate(288deg) translateY(-18px); }

  @keyframes sunFloat {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-3px); }
  }

  /* === Palm tree === */
  .palm-tree {
    position: absolute;
    left: 20px;
    bottom: 24px;
  }
  .palm-trunk {
    width: 6px;
    height: 60px;
    background: linear-gradient(to top, #8B6914, #A0782C);
    border-radius: 3px;
    transform: rotate(-5deg);
    transform-origin: bottom center;
  }
  .palm-leaf {
    position: absolute;
    width: 36px;
    height: 12px;
    border-radius: 50% 50% 0 50%;
    background: #2d7a3a;
    top: -4px;
    left: -10px;
    transform-origin: right center;
    animation: leafSway 3s ease-in-out infinite;
  }
  .leaf-1 { transform: rotate(-20deg); animation-delay: 0s; }
  .leaf-2 { transform: rotate(-50deg); animation-delay: 0.5s; }
  .leaf-3 {
    transform: rotate(10deg) scaleX(-1);
    left: 6px;
    border-radius: 50% 50% 50% 0;
    animation-delay: 0.3s;
  }

  @keyframes leafSway {
    0%, 100% { transform: rotate(-20deg); }
    50% { transform: rotate(-15deg); }
  }
  .leaf-2 {
    animation-name: leafSway2;
  }
  @keyframes leafSway2 {
    0%, 100% { transform: rotate(-50deg); }
    50% { transform: rotate(-45deg); }
  }
  .leaf-3 {
    animation-name: leafSway3;
  }
  @keyframes leafSway3 {
    0%, 100% { transform: rotate(10deg) scaleX(-1); }
    50% { transform: rotate(15deg) scaleX(-1); }
  }

  /* === Bot on towel === */
  .beach-bot-wrap {
    position: absolute;
    bottom: 26px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    align-items: flex-end;
    gap: 6px;
  }

  .beach-towel {
    position: absolute;
    bottom: -4px;
    left: -10px;
    right: -10px;
    height: 8px;
    background: linear-gradient(90deg, #ff6e00, #ffd600, #ff6e00);
    border-radius: 3px;
    opacity: 0.7;
  }

  /* Bot character */
  .beach-bot {
    display: flex;
    flex-direction: column;
    align-items: center;
    animation: botChill 4s ease-in-out infinite;
  }

  .bb-antenna {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: -2px;
  }
  .bb-antenna-ball {
    width: 7px;
    height: 7px;
    border-radius: 50%;
    background: #ff6e00;
    animation: antennaChill 3s ease-in-out infinite;
  }
  .bb-antenna-stick {
    width: 2px;
    height: 8px;
    background: #555;
  }

  /* Head */
  .bb-head {
    width: 42px;
    height: 34px;
    background: #1a1a1a;
    border: 2px solid #333;
    border-radius: 10px 10px 8px 8px;
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  /* Sunglasses */
  .bb-sunglasses {
    display: flex;
    align-items: center;
    gap: 2px;
    position: relative;
    top: -2px;
  }
  .bb-lens {
    width: 12px;
    height: 8px;
    background: #1a1a1a;
    border: 1.5px solid #ff6e00;
    border-radius: 3px;
  }
  .bb-lens-l {
    background: linear-gradient(135deg, #333 40%, #ff6e00 200%);
  }
  .bb-lens-r {
    background: linear-gradient(135deg, #333 40%, #ff6e00 200%);
  }
  .bb-bridge {
    width: 4px;
    height: 1.5px;
    background: #ff6e00;
    margin: 0 -1px;
  }

  .bb-mouth {
    position: absolute;
    bottom: 5px;
    width: 16px;
    height: 7px;
    border-bottom: 2px solid #ffd600;
    border-radius: 0 0 10px 10px;
  }

  /* Body */
  .bb-body {
    width: 36px;
    height: 26px;
    background: #1a1a1a;
    border: 2px solid #333;
    border-top: none;
    border-radius: 0 0 8px 8px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .bb-screen {
    width: 18px;
    height: 12px;
    background: #111;
    border: 1px solid #333;
    border-radius: 2px;
    padding: 2px;
    display: flex;
    flex-direction: column;
    gap: 2px;
  }
  .bb-screen-line {
    height: 1.5px;
    border-radius: 1px;
    animation: screenPulse 3s ease-in-out infinite;
  }
  .l1 { width: 80%; background: #ff6e00; animation-delay: 0s; }
  .l2 { width: 60%; background: #ffd600; animation-delay: 0.5s; }
  .l3 { width: 70%; background: #00b0ff; animation-delay: 1s; }

  /* Tablet */
  .bb-tablet {
    width: 32px;
    height: 42px;
    background: #161616;
    border: 2px solid #333;
    border-radius: 4px;
    padding: 4px;
    transform: rotate(-15deg);
    align-self: center;
    margin-bottom: 4px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
  }
  .bb-tablet-screen {
    width: 100%;
    height: 100%;
    background: #0d0d0d;
    border-radius: 2px;
    padding: 3px;
    display: flex;
    flex-direction: column;
    gap: 3px;
    overflow: hidden;
  }
  .bb-tab-line {
    height: 2px;
    border-radius: 1px;
    opacity: 0;
  }
  .tl1 { width: 90%; background: #e0e0e0; animation: tabType 6s ease infinite 0.5s; }
  .tl2 { width: 70%; background: #888; animation: tabType 6s ease infinite 1.2s; }
  .tl3 { width: 85%; background: #e0e0e0; animation: tabType 6s ease infinite 1.9s; }
  .tl4 { width: 60%; background: #888; animation: tabType 6s ease infinite 2.6s; }
  .bb-tab-cursor {
    width: 4px;
    height: 2px;
    background: #ff6e00;
    border-radius: 1px;
    animation: blink 1s step-end infinite;
  }

  @keyframes botChill {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    25% { transform: translateY(-1px) rotate(-1deg); }
    75% { transform: translateY(0px) rotate(1deg); }
  }

  @keyframes antennaChill {
    0%, 100% { box-shadow: 0 0 4px rgba(255, 110, 0, 0.3); }
    50% { box-shadow: 0 0 8px rgba(255, 110, 0, 0.6); }
  }

  @keyframes screenPulse {
    0%, 100% { opacity: 0.6; }
    50% { opacity: 1; }
  }

  @keyframes tabType {
    0%, 10% { opacity: 0; transform: translateX(-2px); }
    15%, 85% { opacity: 1; transform: translateX(0); }
    90%, 100% { opacity: 0; transform: translateX(0); }
  }

  @keyframes blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0; }
  }

  /* === Waves === */
  .beach-waves {
    position: absolute;
    bottom: 18px;
    left: 0;
    right: 0;
    height: 12px;
    overflow: hidden;
  }
  .wave {
    position: absolute;
    bottom: 0;
    left: -10%;
    width: 120%;
    height: 8px;
    border-radius: 40% 40% 0 0;
    opacity: 0.3;
  }
  .wave-1 {
    background: #00b0ff;
    animation: waveMove 4s ease-in-out infinite;
  }
  .wave-2 {
    background: #00b0ff;
    opacity: 0.15;
    bottom: 2px;
    animation: waveMove 4s ease-in-out infinite 1s;
  }

  @keyframes waveMove {
    0%, 100% { transform: translateX(-3%); }
    50% { transform: translateX(3%); }
  }

  /* === Sand === */
  .beach-sand {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 22px;
    background: linear-gradient(to bottom, #c2a24d, #d4b65a);
    border-radius: 50% 50% 0 0 / 30% 30% 0 0;
    opacity: 0.2;
  }

  /* Responsive */
  @media (max-width: 480px) {
    .beach-scene {
      width: 220px;
      height: 120px;
    }
    .palm-tree { left: 8px; }
    .beach-sun { right: 16px; }
  }
</style>
