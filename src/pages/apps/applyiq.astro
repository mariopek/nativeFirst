---
export const prerender = true;

import PageLayout from '../../layouts/PageLayout.astro';
import { APPS } from '../../lib/constants';

const app = APPS.applyiq;

const featureIcons: Record<string, string> = {
  target: `<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><circle cx="12" cy="12" r="10"/><circle cx="12" cy="12" r="6"/><circle cx="12" cy="12" r="2"/></svg>`,
  'bar-chart': `<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" /></svg>`,
  clipboard: `<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" /></svg>`,
  'pen-tool': `<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" /></svg>`,
  'message-circle': `<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" /></svg>`,
  shield: `<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" /></svg>`,
};
---

<PageLayout title={`${app.name} — AI Job Application Assistant for iOS`} description={app.description}>

  <!-- Hero Section -->
  <section class="relative min-h-[85vh] flex items-center bg-slate-950 hero-gradient overflow-hidden">
    <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-purple-600/20 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-cyan-500/20 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 w-full">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <!-- Left: App Info -->
        <div class="text-center lg:text-left">
          <div class="flex items-center justify-center lg:justify-start gap-4 mb-8">
            <img
              src={app.icon}
              alt={`${app.name} app icon`}
              class="w-20 h-20 sm:w-24 sm:h-24 rounded-[22px] shadow-2xl icon-glow"
            />
            <div>
              <h1 class="font-display font-extrabold text-3xl sm:text-4xl text-white">
                {app.name}
              </h1>
              <div class="flex items-center gap-2 mt-1">
                <span class="inline-flex items-center gap-1.5 px-3 py-1 rounded-full bg-white/10 backdrop-blur-sm border border-white/10 text-xs text-slate-300">
                  <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M7 2h10a2 2 0 012 2v16a2 2 0 01-2 2H7a2 2 0 01-2-2V4a2 2 0 012-2zm5 18a1 1 0 100-2 1 1 0 000 2z" />
                  </svg>
                  {app.platform}
                </span>
                <span class="inline-flex items-center gap-1.5 px-3 py-1 rounded-full bg-amber-500/10 border border-amber-500/20 text-xs font-medium text-amber-400">
                  <div class="w-1.5 h-1.5 bg-amber-400 rounded-full animate-pulse"></div>
                  Coming Soon
                </span>
              </div>
            </div>
          </div>

          <h2 class="font-display font-bold text-2xl sm:text-3xl md:text-4xl text-white mb-4 leading-tight">
            Land Your Dream Job. <span class="gradient-text">Smarter.</span>
          </h2>

          <p class="text-lg text-slate-400 mb-8 leading-relaxed max-w-lg mx-auto lg:mx-0">
            {app.description}
          </p>

          <div class="flex flex-col sm:flex-row items-center justify-center lg:justify-start gap-4">
            <button
              type="button"
              class="inline-flex items-center gap-3 px-8 py-4 rounded-full gradient-brand text-white font-semibold text-base hover:scale-105 hover:shadow-lg hover:shadow-purple-500/25 transition-all duration-300 cursor-pointer"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
              </svg>
              Notify Me When Available
            </button>
          </div>
        </div>

        <!-- Right: Screenshot Placeholder -->
        <div class="relative">
          <div class="relative mx-auto w-[280px] sm:w-[320px]">
            <div class="rounded-[3rem] border-[6px] border-slate-700 bg-slate-800 p-2 shadow-2xl">
              <div class="absolute top-0 left-1/2 -translate-x-1/2 w-28 h-6 bg-slate-700 rounded-b-2xl z-10"></div>
              <div class="rounded-[2.4rem] overflow-hidden">
                <div class="aspect-[9/19.5] bg-gradient-to-br from-slate-800 via-slate-900 to-slate-800 flex items-center justify-center">
                  <div class="text-center p-8">
                    <div class="w-16 h-16 mx-auto mb-4 rounded-2xl gradient-brand flex items-center justify-center opacity-50">
                      <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 15.75l5.159-5.159a2.25 2.25 0 013.182 0l5.159 5.159m-1.5-1.5l1.409-1.409a2.25 2.25 0 013.182 0l2.909 2.909M3.75 21h16.5A2.25 2.25 0 0022.5 18.75V5.25A2.25 2.25 0 0020.25 3H3.75A2.25 2.25 0 001.5 5.25v13.5A2.25 2.25 0 003.75 21z" />
                      </svg>
                    </div>
                    <p class="text-slate-500 text-sm font-medium">App Preview</p>
                  </div>
                </div>
              </div>
            </div>
            <div class="absolute -inset-8 -z-10 bg-gradient-to-r from-purple-600/20 to-cyan-500/20 rounded-full blur-3xl"></div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Grid -->
  <section class="py-20 sm:py-28 bg-white dark:bg-slate-950">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="font-display font-bold text-3xl sm:text-4xl text-slate-900 dark:text-white mb-4">
          Apply With <span class="gradient-text">Confidence</span>
        </h2>
        <p class="text-lg text-slate-600 dark:text-slate-400 max-w-2xl mx-auto">
          ApplyIQ uses AI to give you an unfair advantage in the job market — ethically.
        </p>
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
        {app.features.map((feature) => (
          <div class="group relative rounded-2xl border border-slate-200 dark:border-slate-800 bg-white dark:bg-slate-900 p-8 hover:-translate-y-1 hover:shadow-xl hover:border-purple-200 dark:hover:border-purple-800 transition-all duration-300">
            <div class="w-12 h-12 mb-5 rounded-xl gradient-brand flex items-center justify-center">
              <Fragment set:html={featureIcons[feature.icon] || featureIcons.target} />
            </div>
            <h3 class="font-display font-semibold text-lg text-slate-900 dark:text-white mb-2">
              {feature.title}
            </h3>
            <p class="text-sm text-slate-600 dark:text-slate-400 leading-relaxed">
              {feature.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- How It Works Section -->
  <section class="py-20 sm:py-28 bg-slate-50 dark:bg-slate-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="font-display font-bold text-3xl sm:text-4xl text-slate-900 dark:text-white mb-4">
          How It Works
        </h2>
        <p class="text-lg text-slate-600 dark:text-slate-400 max-w-xl mx-auto">
          From job listing to tailored application in three simple steps.
        </p>
      </div>

      <div class="grid sm:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 mx-auto mb-6 rounded-2xl gradient-brand flex items-center justify-center text-white font-display font-bold text-2xl">1</div>
          <h3 class="font-display font-semibold text-lg text-slate-900 dark:text-white mb-2">Paste the Job Link</h3>
          <p class="text-sm text-slate-600 dark:text-slate-400 leading-relaxed">Share any job listing URL and ApplyIQ instantly extracts the key requirements and skills.</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 mx-auto mb-6 rounded-2xl gradient-brand flex items-center justify-center text-white font-display font-bold text-2xl">2</div>
          <h3 class="font-display font-semibold text-lg text-slate-900 dark:text-white mb-2">AI Tailors Your CV</h3>
          <p class="text-sm text-slate-600 dark:text-slate-400 leading-relaxed">Our AI rewrites and optimizes your resume to highlight the most relevant experience for that specific role.</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 mx-auto mb-6 rounded-2xl gradient-brand flex items-center justify-center text-white font-display font-bold text-2xl">3</div>
          <h3 class="font-display font-semibold text-lg text-slate-900 dark:text-white mb-2">Apply & Track</h3>
          <p class="text-sm text-slate-600 dark:text-slate-400 leading-relaxed">Export your tailored CV, submit your application, and track your progress all in one place.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Support CTA -->
  <section class="py-20 sm:py-28 gradient-brand relative overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-10 left-10 w-40 h-40 border border-white/20 rounded-full"></div>
      <div class="absolute bottom-10 right-10 w-60 h-60 border border-white/20 rounded-full"></div>
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-80 h-80 border border-white/10 rounded-full"></div>
    </div>
    <div class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="font-display font-bold text-3xl sm:text-4xl text-white mb-4">Need Help?</h2>
      <p class="text-lg text-white/80 mb-8 max-w-xl mx-auto">
        Curious about ApplyIQ, want to beta test, or have ideas for features? We'd love to hear from you.
      </p>
      <a
        href="/contact"
        class="inline-flex items-center gap-2 px-8 py-4 rounded-full bg-white text-purple-700 font-semibold text-base hover:bg-slate-50 hover:scale-105 hover:shadow-lg transition-all duration-300"
      >
        Get in Touch
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
        </svg>
      </a>
    </div>
  </section>

</PageLayout>
