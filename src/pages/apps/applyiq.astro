---
export const prerender = true;

import PageLayout from '../../layouts/PageLayout.astro';
import { APPS } from '../../lib/constants';

const app = APPS.applyiq;

// SoftwareApplication JSON-LD
const softwareAppSchema = {
  '@context': 'https://schema.org',
  '@type': 'SoftwareApplication',
  name: 'ApplyIQ',
  description: app.description,
  operatingSystem: 'iOS',
  applicationCategory: 'BusinessApplication',
  url: 'https://nativefirstapp.com/apps/applyiq',
  image: 'https://nativefirstapp.com/images/apps/applyiq-icon.png',
  screenshot: 'https://nativefirstapp.com/images/apps/applyiq-generating.png',
  author: {
    '@type': 'Organization',
    name: 'NativeFirst',
    url: 'https://nativefirstapp.com',
  },
  offers: {
    '@type': 'Offer',
    price: '0',
    priceCurrency: 'USD',
    availability: 'https://schema.org/InStock',
  },
  featureList: app.features.map(f => f.title).join(', '),
};

// FAQPage JSON-LD
const faqSchema = {
  '@context': 'https://schema.org',
  '@type': 'FAQPage',
  mainEntity: [
    {
      '@type': 'Question',
      name: 'What is ATS optimization and why does it matter?',
      acceptedAnswer: {
        '@type': 'Answer',
        text: 'ATS (Applicant Tracking System) is software that companies use to filter resumes before a human ever sees them. Up to 75% of applications are rejected by ATS. ApplyIQ optimizes your CV to pass these filters by matching keywords, formatting, and structure to the job description.',
      },
    },
    {
      '@type': 'Question',
      name: 'What are the 3 ATS optimization tiers?',
      acceptedAnswer: {
        '@type': 'Answer',
        text: 'ApplyIQ offers three levels: Tier 1 provides a realistic, honest match that keeps your CV authentic. Tier 2 gives a balanced optimization with stronger keyword matching. Tier 3 maximizes your ATS score up to 100% — ideal when you want the highest possible chance of passing automated filters.',
      },
    },
    {
      '@type': 'Question',
      name: 'How does the Interview Coach work?',
      acceptedAnswer: {
        '@type': 'Answer',
        text: 'The Interview Coach generates role-specific questions across four categories: Overview, Common, STAR method, and Technical. Each question includes a difficulty rating and a suggested answer framework to help you prepare thoroughly.',
      },
    },
    {
      '@type': 'Question',
      name: 'What is the Mock Interview feature?',
      acceptedAnswer: {
        '@type': 'Answer',
        text: 'The Mock Interview simulates a real interview with 15 timed questions, 2 minutes each. You answer in real-time and rate your confidence after each response, helping you identify areas that need more practice.',
      },
    },
    {
      '@type': 'Question',
      name: 'Is my career data safe with ApplyIQ?',
      acceptedAnswer: {
        '@type': 'Answer',
        text: 'Yes. ApplyIQ is built with privacy by design. All your career data — CVs, interview answers, and personal information — stays on your device. There are no cloud uploads and no data selling. Ever.',
      },
    },
  ],
};

const featureIcons: Record<string, string> = {
  target: `<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><circle cx="12" cy="12" r="10"/><circle cx="12" cy="12" r="6"/><circle cx="12" cy="12" r="2"/></svg>`,
  'bar-chart': `<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" /></svg>`,
  clipboard: `<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" /></svg>`,
  'pen-tool': `<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" /></svg>`,
  'message-circle': `<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>`,
  shield: `<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" /></svg>`,
};
---

<PageLayout title={`${app.name} — AI CV Generator & Interview Coach for iOS`} description={app.description}>

  <script type="application/ld+json" set:html={JSON.stringify(softwareAppSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />

  <!-- Hero Section -->
  <section class="relative min-h-[85vh] flex items-center bg-bg hero-gradient overflow-hidden">
    <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-accent/20 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-accent-blue/15 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 w-full">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <!-- Left: App Info -->
        <div class="text-center lg:text-left">
          <div class="flex items-center justify-center lg:justify-start gap-4 mb-8">
            <img
              src={app.icon}
              alt={`${app.name} app icon`}
              width="96"
              height="96"
              class="w-20 h-20 sm:w-24 sm:h-24 rounded-[22px] shadow-2xl icon-glow"
            />
            <div>
              <h1 class="font-display font-black tracking-tight text-3xl sm:text-4xl text-white">
                {app.name}
              </h1>
              <div class="flex items-center gap-2 mt-1">
                <span class="inline-flex items-center gap-1.5 px-3 py-1 rounded-full bg-white/10 backdrop-blur-sm border border-white/10 text-xs text-text-muted">
                  <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M7 2h10a2 2 0 012 2v16a2 2 0 01-2 2H7a2 2 0 01-2-2V4a2 2 0 012-2zm5 18a1 1 0 100-2 1 1 0 000 2z" />
                  </svg>
                  {app.platform}
                </span>
                <span class="inline-flex items-center gap-1.5 px-3 py-1 rounded-full bg-emerald-500/10 border border-emerald-500/20 text-xs font-medium text-emerald-400">
                  <div class="w-1.5 h-1.5 bg-emerald-400 rounded-full"></div>
                  Available Now
                </span>
              </div>
            </div>
          </div>

          <h2 class="font-display font-bold text-2xl sm:text-3xl md:text-4xl text-white mb-4 leading-tight">
            Land Your Dream Job. <span class="gradient-text">Smarter.</span>
          </h2>

          <p class="text-lg text-text-muted mb-8 leading-relaxed max-w-lg mx-auto lg:mx-0">
            {app.description}
          </p>

          <div class="flex flex-col sm:flex-row items-center justify-center lg:justify-start gap-4">
            <a
              href={app.appStoreUrl}
              class="inline-flex items-center gap-3 px-8 py-4 rounded-full gradient-brand text-white font-semibold text-base hover:scale-105 hover:shadow-lg hover:shadow-accent/20 transition-all duration-300"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.8-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z" />
              </svg>
              Download on the App Store
            </a>
          </div>
        </div>

        <!-- Right: Screenshot Showcase -->
        <div class="relative">
          <div class="relative flex items-end justify-center gap-3 sm:gap-4">
            <!-- Back phone: Interview Coach STAR -->
            <div class="hidden sm:block relative w-[160px] -mr-6 z-0 opacity-70 translate-y-4">
              <div class="rounded-[1.8rem] border-[3px] border-slate-700 bg-slate-800 p-1 shadow-xl">
                <div class="rounded-[1.5rem] overflow-hidden">
                  <img src="/images/apps/applyiq-coach-star.png" alt="Interview Coach — STAR method breakdown" class="w-full" loading="lazy" decoding="async" />
                </div>
              </div>
            </div>
            <!-- Main phone: CV Generating -->
            <div class="relative w-[240px] sm:w-[260px] z-10">
              <div class="rounded-[2.6rem] border-[5px] border-slate-700 bg-slate-800 p-1.5 shadow-2xl">
                <div class="absolute top-0 left-1/2 -translate-x-1/2 w-24 h-5 bg-slate-700 rounded-b-2xl z-10"></div>
                <div class="rounded-[2.2rem] overflow-hidden">
                  <img src="/images/apps/applyiq-generating.png" alt="ApplyIQ generating an optimized CV" class="w-full" loading="lazy" decoding="async" />
                </div>
              </div>
            </div>
            <!-- Back phone: Mock Interview -->
            <div class="hidden sm:block relative w-[160px] -ml-6 z-0 opacity-70 translate-y-4">
              <div class="rounded-[1.8rem] border-[3px] border-slate-700 bg-slate-800 p-1 shadow-xl">
                <div class="rounded-[1.5rem] overflow-hidden">
                  <img src="/images/apps/applyiq-mock-interview.png" alt="Timed mock interview session" class="w-full" loading="lazy" decoding="async" />
                </div>
              </div>
            </div>
          </div>
          <div class="absolute -inset-8 -z-10 bg-gradient-to-r from-accent/20 to-accent-blue/15 rounded-full blur-3xl"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Grid -->
  <section class="py-20 sm:py-28 bg-bg">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="font-display font-bold text-3xl sm:text-4xl text-white mb-4">
          Generate. Prepare. <span class="gradient-text">Land It.</span>
        </h2>
        <p class="text-lg text-text-muted max-w-2xl mx-auto">
          From ATS-optimized CVs to full interview prep with mock interviews — everything you need in one app.
        </p>
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
        {app.features.map((feature) => (
          <div class="group relative rounded-2xl border border-border bg-surface p-8 hover:-translate-y-1 hover:shadow-xl hover:border-accent/40 transition-all duration-300">
            <div class="w-12 h-12 mb-5 rounded-xl gradient-brand flex items-center justify-center">
              <Fragment set:html={featureIcons[feature.icon] || featureIcons.target} />
            </div>
            <h3 class="font-display font-semibold text-lg text-white mb-2">
              {feature.title}
            </h3>
            <p class="text-sm text-text-muted leading-relaxed">
              {feature.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- App Screenshots Gallery -->
  <section class="py-20 sm:py-28 bg-surface overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="font-display font-bold text-3xl sm:text-4xl text-white mb-4">
          See It in <span class="gradient-text">Action</span>
        </h2>
        <p class="text-lg text-text-muted max-w-2xl mx-auto">
          From building your base CV to acing the mock interview — every step designed to get you hired.
        </p>
      </div>

      <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-5 gap-4 sm:gap-6 lg:gap-8">
        <!-- Screenshot 1: Base CV -->
        <div class="group text-center">
          <div class="relative rounded-[1.6rem] sm:rounded-[2rem] border-[3px] sm:border-[4px] border-slate-700 bg-slate-800 p-1 shadow-lg group-hover:shadow-xl group-hover:border-accent/40 group-hover:-translate-y-1 transition-all duration-300">
            <div class="rounded-[1.3rem] sm:rounded-[1.7rem] overflow-hidden">
              <img src="/images/apps/applyiq-base-cv.png" alt="Base CV entry with manual and upload options" class="w-full" loading="lazy" decoding="async" />
            </div>
          </div>
          <p class="mt-3 text-xs sm:text-sm font-medium text-text-muted">Base CV</p>
        </div>

        <!-- Screenshot 2: Generating -->
        <div class="group text-center">
          <div class="relative rounded-[1.6rem] sm:rounded-[2rem] border-[3px] sm:border-[4px] border-slate-700 bg-slate-800 p-1 shadow-lg group-hover:shadow-xl group-hover:border-accent/40 group-hover:-translate-y-1 transition-all duration-300">
            <div class="rounded-[1.3rem] sm:rounded-[1.7rem] overflow-hidden">
              <img src="/images/apps/applyiq-generating.png" alt="CV generation with ATS optimization in progress" class="w-full" loading="lazy" decoding="async" />
            </div>
          </div>
          <p class="mt-3 text-xs sm:text-sm font-medium text-text-muted">CV Generation</p>
        </div>

        <!-- Screenshot 3: Interview Coach — Common -->
        <div class="group text-center">
          <div class="relative rounded-[1.6rem] sm:rounded-[2rem] border-[3px] sm:border-[4px] border-slate-700 bg-slate-800 p-1 shadow-lg group-hover:shadow-xl group-hover:border-accent/40 group-hover:-translate-y-1 transition-all duration-300">
            <div class="rounded-[1.3rem] sm:rounded-[1.7rem] overflow-hidden">
              <img src="/images/apps/applyiq-coach-common.png" alt="Interview Coach common questions with difficulty ratings" class="w-full" loading="lazy" decoding="async" />
            </div>
          </div>
          <p class="mt-3 text-xs sm:text-sm font-medium text-text-muted">Interview Coach</p>
        </div>

        <!-- Screenshot 4: Interview Coach — STAR -->
        <div class="group text-center">
          <div class="relative rounded-[1.6rem] sm:rounded-[2rem] border-[3px] sm:border-[4px] border-slate-700 bg-slate-800 p-1 shadow-lg group-hover:shadow-xl group-hover:border-accent/40 group-hover:-translate-y-1 transition-all duration-300">
            <div class="rounded-[1.3rem] sm:rounded-[1.7rem] overflow-hidden">
              <img src="/images/apps/applyiq-coach-star.png" alt="STAR method breakdown with color-coded sections" class="w-full" loading="lazy" decoding="async" />
            </div>
          </div>
          <p class="mt-3 text-xs sm:text-sm font-medium text-text-muted">STAR Breakdown</p>
        </div>

        <!-- Screenshot 5: Mock Interview -->
        <div class="group text-center col-span-2 sm:col-span-1 max-w-[50%] sm:max-w-none mx-auto sm:mx-0">
          <div class="relative rounded-[1.6rem] sm:rounded-[2rem] border-[3px] sm:border-[4px] border-slate-700 bg-slate-800 p-1 shadow-lg group-hover:shadow-xl group-hover:border-accent/40 group-hover:-translate-y-1 transition-all duration-300">
            <div class="rounded-[1.3rem] sm:rounded-[1.7rem] overflow-hidden">
              <img src="/images/apps/applyiq-mock-interview.png" alt="Timed mock interview with 15 questions" class="w-full" loading="lazy" decoding="async" />
            </div>
          </div>
          <p class="mt-3 text-xs sm:text-sm font-medium text-text-muted">Mock Interview</p>
        </div>
      </div>
    </div>
  </section>

  <!-- How It Works Section -->
  <section class="py-20 sm:py-28 bg-surface">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="font-display font-bold text-3xl sm:text-4xl text-white mb-4">
          How It Works
        </h2>
        <p class="text-lg text-text-muted max-w-xl mx-auto">
          From your base CV to a tailored application and full interview coaching in five steps.
        </p>
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-5 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 mx-auto mb-6 rounded-2xl gradient-brand flex items-center justify-center text-white font-display font-bold text-2xl">1</div>
          <h3 class="font-display font-semibold text-lg text-white mb-2">Enter Your Base CV</h3>
          <p class="text-sm text-text-muted leading-relaxed">Type it manually or paste and upload your existing CV — name, email, summary, experience, and more.</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 mx-auto mb-6 rounded-2xl gradient-brand flex items-center justify-center text-white font-display font-bold text-2xl">2</div>
          <h3 class="font-display font-semibold text-lg text-white mb-2">Pick Your ATS Tier</h3>
          <p class="text-sm text-text-muted leading-relaxed">Choose from 3 optimization levels — from a realistic match to maximum ATS score up to 100%.</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 mx-auto mb-6 rounded-2xl gradient-brand flex items-center justify-center text-white font-display font-bold text-2xl">3</div>
          <h3 class="font-display font-semibold text-lg text-white mb-2">Generate & Save</h3>
          <p class="text-sm text-text-muted leading-relaxed">AI generates your optimized CV. Save it or tap "Prep for Interview" to continue.</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 mx-auto mb-6 rounded-2xl gradient-brand flex items-center justify-center text-white font-display font-bold text-2xl">4</div>
          <h3 class="font-display font-semibold text-lg text-white mb-2">Interview Coach</h3>
          <p class="text-sm text-text-muted leading-relaxed">Get role-specific questions across four categories: Overview, Common, STAR method, and Technical — with difficulty ratings.</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 mx-auto mb-6 rounded-2xl gradient-brand flex items-center justify-center text-white font-display font-bold text-2xl">5</div>
          <h3 class="font-display font-semibold text-lg text-white mb-2">Mock Interview</h3>
          <p class="text-sm text-text-muted leading-relaxed">15 timed questions, 2 minutes each. Answer in real-time and rate yourself after every response.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-20 sm:py-28 bg-white dark:bg-slate-950">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="font-display font-bold text-3xl sm:text-4xl text-slate-900 dark:text-white mb-4">
          Frequently Asked <span class="gradient-text">Questions</span>
        </h2>
        <p class="text-lg text-slate-600 dark:text-slate-400">
          Everything you need to know about ApplyIQ.
        </p>
      </div>

      <div class="space-y-4">
        {faqSchema.mainEntity.map((item) => (
          <details class="group rounded-2xl border border-slate-200 dark:border-slate-800 bg-white dark:bg-slate-900 overflow-hidden">
            <summary class="flex items-center justify-between gap-4 px-6 py-5 cursor-pointer list-none font-display font-semibold text-slate-900 dark:text-white hover:text-purple-600 dark:hover:text-purple-400 transition-colors">
              {item.name}
              <svg class="w-5 h-5 shrink-0 text-slate-400 group-open:rotate-180 transition-transform duration-200" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
              </svg>
            </summary>
            <div class="px-6 pb-5 text-sm text-slate-600 dark:text-slate-400 leading-relaxed">
              {item.acceptedAnswer.text}
            </div>
          </details>
        ))}
      </div>
    </div>
  </section>

  <!-- Support CTA -->
  <section class="py-20 sm:py-28 gradient-brand relative overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-10 left-10 w-40 h-40 border border-white/20 rounded-full"></div>
      <div class="absolute bottom-10 right-10 w-60 h-60 border border-white/20 rounded-full"></div>
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-80 h-80 border border-white/10 rounded-full"></div>
    </div>
    <div class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="font-display font-bold text-3xl sm:text-4xl text-white mb-4">Need Help?</h2>
      <p class="text-lg text-white/80 mb-8 max-w-xl mx-auto">
        Have questions about ApplyIQ, feedback, or ideas for new features? We'd love to hear from you.
      </p>
      <a
        href="/contact"
        class="inline-flex items-center gap-2 px-8 py-4 rounded-full bg-white text-accent font-semibold text-base hover:bg-surface hover:scale-105 hover:shadow-lg transition-all duration-300"
      >
        Get in Touch
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
        </svg>
      </a>
    </div>
  </section>

</PageLayout>
