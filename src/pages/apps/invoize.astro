---
export const prerender = true;

import PageLayout from '../../layouts/PageLayout.astro';
import { APPS } from '../../lib/constants';

const app = APPS.invoize;

const featureIcons: Record<string, string> = {
  zap: `<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" /></svg>`,
  file: `<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" /></svg>`,
  users: `<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" /></svg>`,
  calculator: `<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" /></svg>`,
  globe: `<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>`,
  lock: `<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" /></svg>`,
};
---

<PageLayout title={`${app.name} — Professional Invoicing for macOS`} description={app.description}>

  <!-- Hero Section -->
  <section class="relative min-h-[85vh] flex items-center bg-bg hero-gradient overflow-hidden">
    <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-accent/20 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-cyan-500/20 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 w-full">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <!-- Left: App Info -->
        <div class="text-center lg:text-left">
          <div class="flex items-center justify-center lg:justify-start gap-4 mb-8">
            <img
              src={app.icon}
              alt={`${app.name} app icon`}
              class="w-20 h-20 sm:w-24 sm:h-24 rounded-[22px] shadow-2xl icon-glow"
            />
            <div>
              <h1 class="font-display font-extrabold tracking-tight text-3xl sm:text-4xl text-white">
                {app.name}
              </h1>
              <span class="inline-flex items-center gap-1.5 mt-1 px-3 py-1 rounded-full bg-bg/10 backdrop-blur-sm border border-white/10 text-xs text-text-muted">
                <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M3 4h18v12H3V4zm0 14h18v2H3v-2z" />
                </svg>
                {app.platform}
              </span>
            </div>
          </div>

          <h2 class="font-display font-bold text-2xl sm:text-3xl md:text-4xl text-white mb-4 leading-tight">
            {app.tagline.split('.')[0]}.<span class="gradient-text"> {app.tagline.split('.').slice(1).join('.').trim()}</span>
          </h2>

          <p class="text-lg text-text-muted mb-8 leading-relaxed max-w-lg mx-auto lg:mx-0">
            {app.description}
          </p>

          <div class="flex flex-col sm:flex-row items-center justify-center lg:justify-start gap-4">
            <a
              href={app.appStoreUrl}
              class="inline-flex items-center gap-3 px-8 py-4 rounded-full gradient-brand text-white font-semibold text-base hover:scale-105 hover:shadow-lg hover:shadow-accent/25 transition-all duration-300"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.8-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z" />
              </svg>
              Download on the Mac App Store
            </a>
          </div>
        </div>

        <!-- Right: App Screenshot -->
        <div class="relative">
          <div class="relative rounded-2xl overflow-hidden border border-white/10 shadow-2xl">
            <img
              src="/images/apps/invoize-dashboard.jpg"
              alt="Invoize Dashboard — revenue overview, monthly charts, and payment analytics"
              class="w-full"
              loading="eager"
            />
          </div>
          <!-- Decorative glow behind screenshot -->
          <div class="absolute -inset-4 -z-10 bg-gradient-to-r from-accent/20 to-accent-blue/15 rounded-3xl blur-2xl"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Grid -->
  <section class="py-20 sm:py-28 bg-bg">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="font-display font-bold text-3xl sm:text-4xl text-white mb-4">
          Everything You Need to <span class="gradient-text">Get Paid</span>
        </h2>
        <p class="text-lg text-text-muted max-w-2xl mx-auto">
          Invoize packs all the essential invoicing tools into a clean, native Mac experience.
        </p>
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
        {app.features.map((feature) => (
          <div class="group relative rounded-2xl border border-border bg-bg p-8 hover:-translate-y-1 hover:shadow-xl hover:border-accent/40 transition-all duration-300">
            <div class="w-12 h-12 mb-5 rounded-xl gradient-brand flex items-center justify-center">
              <Fragment set:html={featureIcons[feature.icon] || featureIcons.zap} />
            </div>
            <h3 class="font-display font-semibold text-lg text-white mb-2">
              {feature.title}
            </h3>
            <p class="text-sm text-text-muted leading-relaxed">
              {feature.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Screenshot Gallery Placeholder -->
  <section class="py-20 sm:py-28 bg-surface">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="font-display font-bold text-3xl sm:text-4xl text-white mb-4">
          See It in Action
        </h2>
        <p class="text-lg text-text-muted max-w-xl mx-auto">
          A clean, focused interface designed to get out of your way.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-6">
        <!-- Invoice Editor -->
        <div class="group rounded-2xl overflow-hidden border border-border hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
          <img
            src="/images/apps/invoize-invoice-editor.jpg"
            alt="Invoize — invoice list with detail view"
            class="w-full aspect-[4/3] object-cover"
            loading="lazy"
          />
          <div class="px-4 py-3 bg-bg">
            <p class="text-sm text-text-muted font-medium">Invoice Editor</p>
          </div>
        </div>

        <!-- Client Dashboard -->
        <div class="group rounded-2xl overflow-hidden border border-border hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
          <img
            src="/images/apps/invoize-client-dashboard.jpg"
            alt="Invoize — client dashboard with analytics and charts"
            class="w-full aspect-[4/3] object-cover"
            loading="lazy"
          />
          <div class="px-4 py-3 bg-bg">
            <p class="text-sm text-text-muted font-medium">Client Dashboard</p>
          </div>
        </div>

        <!-- PDF Export -->
        <div class="group rounded-2xl overflow-hidden border border-border hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
          <img
            src="/images/apps/invoize-pdf-export.jpg"
            alt="Invoize — professional PDF invoice export"
            class="w-full aspect-[4/3] object-cover"
            loading="lazy"
          />
          <div class="px-4 py-3 bg-bg">
            <p class="text-sm text-text-muted font-medium">PDF Export</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Support CTA -->
  <section class="py-20 sm:py-28 gradient-brand relative overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-10 left-10 w-40 h-40 border border-white/20 rounded-full"></div>
      <div class="absolute bottom-10 right-10 w-60 h-60 border border-white/20 rounded-full"></div>
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-80 h-80 border border-white/10 rounded-full"></div>
    </div>
    <div class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="font-display font-bold text-3xl sm:text-4xl text-white mb-4">Need Help?</h2>
      <p class="text-lg text-white/80 mb-8 max-w-xl mx-auto">
        Have a question about Invoize, found a bug, or want to request a feature? We'd love to hear from you.
      </p>
      <a
        href="/contact"
        class="inline-flex items-center gap-2 px-8 py-4 rounded-full bg-bg text-accent font-semibold text-base hover:bg-surface hover:scale-105 hover:shadow-lg transition-all duration-300"
      >
        Get in Touch
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
        </svg>
      </a>
    </div>
  </section>

</PageLayout>
