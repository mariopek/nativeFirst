---
export const prerender = true;

import PageLayout from '../../layouts/PageLayout.astro';
import { APPS } from '../../lib/constants';

const app = APPS.thinkbud;

const featureIcons: Record<string, string> = {
  map: `<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l5.447 2.724A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" /></svg>`,
  layers: `<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" /></svg>`,
  'check-circle': `<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>`,
  hash: `<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M7 20V4m10 16V4M3 8h18M3 16h18" /></svg>`,
  book: `<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" /></svg>`,
  search: `<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" /></svg>`,
};
---

<PageLayout title={`${app.name} â€” AI Learning Companion for iOS`} description={app.description}>

  <!-- Hero Section -->
  <section class="relative min-h-[85vh] flex items-center bg-slate-950 hero-gradient overflow-hidden">
    <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-purple-600/20 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-cyan-500/20 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 w-full">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <!-- Left: App Info -->
        <div class="text-center lg:text-left">
          <div class="flex items-center justify-center lg:justify-start gap-4 mb-8">
            <img
              src={app.icon}
              alt={`${app.name} app icon`}
              class="w-20 h-20 sm:w-24 sm:h-24 rounded-[22px] shadow-2xl icon-glow"
            />
            <div>
              <h1 class="font-display font-extrabold text-3xl sm:text-4xl text-white">
                {app.name}
              </h1>
              <div class="flex items-center gap-2 mt-1">
                <span class="inline-flex items-center gap-1.5 px-3 py-1 rounded-full bg-white/10 backdrop-blur-sm border border-white/10 text-xs text-slate-300">
                  <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M7 2h10a2 2 0 012 2v16a2 2 0 01-2 2H7a2 2 0 01-2-2V4a2 2 0 012-2zm5 18a1 1 0 100-2 1 1 0 000 2z" />
                  </svg>
                  {app.platform}
                </span>
                <span class="inline-flex items-center gap-1.5 px-3 py-1 rounded-full bg-amber-500/10 border border-amber-500/20 text-xs font-medium text-amber-400">
                  <div class="w-1.5 h-1.5 bg-amber-400 rounded-full animate-pulse"></div>
                  Coming Soon
                </span>
              </div>
            </div>
          </div>

          <h2 class="font-display font-bold text-2xl sm:text-3xl md:text-4xl text-white mb-4 leading-tight">
            Your <span class="gradient-text">AI-Powered</span> Learning Companion.
          </h2>

          <p class="text-lg text-slate-400 mb-8 leading-relaxed max-w-lg mx-auto lg:mx-0">
            {app.description}
          </p>

          <div class="flex flex-col sm:flex-row items-center justify-center lg:justify-start gap-4">
            <button
              type="button"
              class="inline-flex items-center gap-3 px-8 py-4 rounded-full gradient-brand text-white font-semibold text-base hover:scale-105 hover:shadow-lg hover:shadow-purple-500/25 transition-all duration-300 cursor-pointer"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
              </svg>
              Notify Me When Available
            </button>
          </div>
        </div>

        <!-- Right: Screenshot Placeholder -->
        <div class="relative">
          <!-- Phone mockup frame -->
          <div class="relative mx-auto w-[280px] sm:w-[320px]">
            <div class="rounded-[3rem] border-[6px] border-slate-700 bg-slate-800 p-2 shadow-2xl">
              <!-- Notch -->
              <div class="absolute top-0 left-1/2 -translate-x-1/2 w-28 h-6 bg-slate-700 rounded-b-2xl z-10"></div>
              <!-- Screen -->
              <div class="rounded-[2.4rem] overflow-hidden">
                <div class="aspect-[9/19.5] bg-gradient-to-br from-slate-800 via-slate-900 to-slate-800 flex items-center justify-center">
                  <div class="text-center p-8">
                    <div class="w-16 h-16 mx-auto mb-4 rounded-2xl gradient-brand flex items-center justify-center opacity-50">
                      <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 15.75l5.159-5.159a2.25 2.25 0 013.182 0l5.159 5.159m-1.5-1.5l1.409-1.409a2.25 2.25 0 013.182 0l2.909 2.909M3.75 21h16.5A2.25 2.25 0 0022.5 18.75V5.25A2.25 2.25 0 0020.25 3H3.75A2.25 2.25 0 001.5 5.25v13.5A2.25 2.25 0 003.75 21z" />
                      </svg>
                    </div>
                    <p class="text-slate-500 text-sm font-medium">App Preview</p>
                  </div>
                </div>
              </div>
            </div>
            <!-- Decorative glow behind phone -->
            <div class="absolute -inset-8 -z-10 bg-gradient-to-r from-purple-600/20 to-cyan-500/20 rounded-full blur-3xl"></div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Grid -->
  <section class="py-20 sm:py-28 bg-white dark:bg-slate-950">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="font-display font-bold text-3xl sm:text-4xl text-slate-900 dark:text-white mb-4">
          Learn Smarter, Not <span class="gradient-text">Harder</span>
        </h2>
        <p class="text-lg text-slate-600 dark:text-slate-400 max-w-2xl mx-auto">
          ThinkBud combines AI with proven learning techniques to help you master any subject.
        </p>
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
        {app.features.map((feature) => (
          <div class="group relative rounded-2xl border border-slate-200 dark:border-slate-800 bg-white dark:bg-slate-900 p-8 hover:-translate-y-1 hover:shadow-xl hover:border-purple-200 dark:hover:border-purple-800 transition-all duration-300">
            <div class="w-12 h-12 mb-5 rounded-xl gradient-brand flex items-center justify-center">
              <Fragment set:html={featureIcons[feature.icon] || featureIcons.search} />
            </div>
            <h3 class="font-display font-semibold text-lg text-slate-900 dark:text-white mb-2">
              {feature.title}
            </h3>
            <p class="text-sm text-slate-600 dark:text-slate-400 leading-relaxed">
              {feature.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Screenshot Gallery Placeholder -->
  <section class="py-20 sm:py-28 bg-slate-50 dark:bg-slate-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="font-display font-bold text-3xl sm:text-4xl text-slate-900 dark:text-white mb-4">
          Designed for Learning
        </h2>
        <p class="text-lg text-slate-600 dark:text-slate-400 max-w-xl mx-auto">
          A beautiful, distraction-free interface that keeps you focused on what matters.
        </p>
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- Phone Mockup 1 -->
        <div class="group rounded-2xl overflow-hidden border border-slate-200 dark:border-slate-800 hover:shadow-xl hover:-translate-y-1 transition-all duration-300 bg-white dark:bg-slate-800">
          <div class="aspect-[9/16] bg-gradient-to-br from-purple-100 to-cyan-100 dark:from-purple-900/20 dark:to-cyan-900/20 flex items-center justify-center">
            <div class="text-center">
              <svg class="w-8 h-8 mx-auto text-purple-300 dark:text-purple-700 mb-2" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l5.447 2.724A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
              </svg>
              <p class="text-xs text-purple-400 dark:text-purple-600 font-medium">Mind Maps</p>
            </div>
          </div>
        </div>

        <!-- Phone Mockup 2 -->
        <div class="group rounded-2xl overflow-hidden border border-slate-200 dark:border-slate-800 hover:shadow-xl hover:-translate-y-1 transition-all duration-300 bg-white dark:bg-slate-800">
          <div class="aspect-[9/16] bg-gradient-to-br from-cyan-100 to-purple-100 dark:from-cyan-900/20 dark:to-purple-900/20 flex items-center justify-center">
            <div class="text-center">
              <svg class="w-8 h-8 mx-auto text-cyan-300 dark:text-cyan-700 mb-2" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
              </svg>
              <p class="text-xs text-cyan-400 dark:text-cyan-600 font-medium">Flash Cards</p>
            </div>
          </div>
        </div>

        <!-- Phone Mockup 3 -->
        <div class="group rounded-2xl overflow-hidden border border-slate-200 dark:border-slate-800 hover:shadow-xl hover:-translate-y-1 transition-all duration-300 bg-white dark:bg-slate-800">
          <div class="aspect-[9/16] bg-gradient-to-br from-purple-100 via-slate-100 to-cyan-100 dark:from-purple-900/20 dark:via-slate-900/20 dark:to-cyan-900/20 flex items-center justify-center">
            <div class="text-center">
              <svg class="w-8 h-8 mx-auto text-slate-300 dark:text-slate-600 mb-2" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <p class="text-xs text-slate-400 dark:text-slate-500 font-medium">Quiz Mode</p>
            </div>
          </div>
        </div>

        <!-- Phone Mockup 4 -->
        <div class="group rounded-2xl overflow-hidden border border-slate-200 dark:border-slate-800 hover:shadow-xl hover:-translate-y-1 transition-all duration-300 bg-white dark:bg-slate-800">
          <div class="aspect-[9/16] bg-gradient-to-br from-cyan-100 via-purple-100 to-slate-100 dark:from-cyan-900/20 dark:via-purple-900/20 dark:to-slate-900/20 flex items-center justify-center">
            <div class="text-center">
              <svg class="w-8 h-8 mx-auto text-purple-300 dark:text-purple-700 mb-2" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
              </svg>
              <p class="text-xs text-purple-400 dark:text-purple-600 font-medium">AI Summaries</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Support CTA -->
  <section class="py-20 sm:py-28 gradient-brand relative overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-10 left-10 w-40 h-40 border border-white/20 rounded-full"></div>
      <div class="absolute bottom-10 right-10 w-60 h-60 border border-white/20 rounded-full"></div>
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-80 h-80 border border-white/10 rounded-full"></div>
    </div>
    <div class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="font-display font-bold text-3xl sm:text-4xl text-white mb-4">Need Help?</h2>
      <p class="text-lg text-white/80 mb-8 max-w-xl mx-auto">
        Curious about ThinkBud, want to beta test, or have ideas for features? We'd love to hear from you.
      </p>
      <a
        href="/contact"
        class="inline-flex items-center gap-2 px-8 py-4 rounded-full bg-white text-purple-700 font-semibold text-base hover:bg-slate-50 hover:scale-105 hover:shadow-lg transition-all duration-300"
      >
        Get in Touch
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
        </svg>
      </a>
    </div>
  </section>

</PageLayout>
