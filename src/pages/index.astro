---
export const prerender = true;

import PageLayout from '../layouts/PageLayout.astro';
import { SITE, APPS } from '../lib/constants';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog', ({ data }) => !data.draft);
const latestPosts = posts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<PageLayout title={`${SITE.name} — Native Apple Apps`}>
  <!-- Hero Section -->
  <section class="relative min-h-[90vh] flex items-center bg-bg hero-gradient overflow-hidden">
    <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-accent/20 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-accent-blue/15 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 text-center">
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/10 backdrop-blur-sm border border-white/10 mb-8">
        <div class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></div>
        <span class="text-sm text-text-muted">Crafting native experiences for Apple platforms</span>
      </div>

      <h1 class="font-display font-extrabold text-4xl sm:text-5xl md:text-6xl lg:text-7xl text-white mb-6 leading-tight">
        Apps That Feel
        <span class="gradient-text block sm:inline"> Right at Home</span>
      </h1>

      <p class="text-lg sm:text-xl text-text-muted max-w-2xl mx-auto mb-10 leading-relaxed">
        We build thoughtful, native apps for iOS and macOS — no compromises,
        no cross-platform shortcuts. Just pure Apple experience.
      </p>

      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a
          href="#apps"
          class="inline-flex items-center gap-2 px-8 py-4 rounded-full gradient-brand text-white font-semibold text-base hover:scale-105 hover:shadow-lg hover:shadow-accent/20 transition-all duration-300"
        >
          Explore Our Apps
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
        <a
          href="/blog"
          class="inline-flex items-center gap-2 px-8 py-4 rounded-full border border-white/20 text-white font-semibold text-base hover:bg-white/10 hover:border-white/40 transition-all duration-300"
        >
          Read the Blog
        </a>
      </div>

      <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
        <svg class="w-6 h-6 text-text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
        </svg>
      </div>
    </div>
  </section>

  <!-- Apps Showcase -->
  <section id="apps" class="py-20 sm:py-28 bg-bg">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="font-display font-bold text-3xl sm:text-4xl text-white mb-4">Our Apps</h2>
        <p class="text-lg text-text-muted max-w-xl mx-auto">Native apps designed with care for Apple platforms.</p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {Object.entries(APPS).map(([key, app]) => (
          <a
            href={`/apps/${key}`}
            class="group relative rounded-2xl border border-border bg-surface p-8 hover:-translate-y-1 hover:shadow-xl hover:border-accent/50 transition-all duration-300"
          >
            <div class="flex items-start gap-5 mb-6">
              <img src={app.icon} alt={app.name} class="w-16 h-16 rounded-2xl shadow-lg" />
              <div>
                <div class="flex items-center gap-3 mb-1">
                  <h3 class="font-display font-bold text-xl text-white">{app.name}</h3>
                  <span class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${
                    app.status === 'available'
                      ? 'bg-accent-green/10 text-accent-green'
                      : 'bg-accent-yellow/10 text-accent-yellow'
                  }`}>
                    {app.status === 'available' ? 'Available' : 'Coming Soon'}
                  </span>
                </div>
                <span class="inline-flex items-center gap-1 text-xs text-text-muted">
                  {app.platform === 'macOS' ? (
                    <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 24 24"><path d="M3 4h18v12H3V4zm0 14h18v2H3v-2z"/></svg>
                  ) : (
                    <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 24 24"><path d="M7 2h10a2 2 0 012 2v16a2 2 0 01-2 2H7a2 2 0 01-2-2V4a2 2 0 012-2zm5 18a1 1 0 100-2 1 1 0 000 2z"/></svg>
                  )}
                  {app.platform}
                </span>
              </div>
            </div>
            <p class="text-text-muted leading-relaxed mb-4">{app.description}</p>
            <span class="inline-flex items-center gap-1 text-sm font-medium text-accent group-hover:gap-2 transition-all">
              Learn more
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Philosophy Section -->
  <section class="py-20 sm:py-28 bg-surface">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="font-display font-bold text-3xl sm:text-4xl text-white mb-4">Built with Care</h2>
        <p class="text-lg text-text-muted max-w-2xl mx-auto">
          Every app we build is a native Apple citizen. No Electron wrappers, no cross-platform
          compromises — just thoughtful software that respects your platform.
        </p>
      </div>

      <div class="grid sm:grid-cols-3 gap-8">
        <div class="text-center p-8 rounded-2xl bg-surface-2 border border-border">
          <div class="w-14 h-14 mx-auto mb-5 rounded-2xl gradient-brand flex items-center justify-center">
            <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <h3 class="font-display font-semibold text-lg text-white mb-2">Native Performance</h3>
          <p class="text-sm text-text-muted">Built with Swift and SwiftUI for buttery-smooth performance that matches the platform.</p>
        </div>

        <div class="text-center p-8 rounded-2xl bg-surface-2 border border-border">
          <div class="w-14 h-14 mx-auto mb-5 rounded-2xl gradient-brand flex items-center justify-center">
            <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
            </svg>
          </div>
          <h3 class="font-display font-semibold text-lg text-white mb-2">Privacy Focused</h3>
          <p class="text-sm text-text-muted">Your data stays on your device. No tracking, no cloud required, no compromises.</p>
        </div>

        <div class="text-center p-8 rounded-2xl bg-surface-2 border border-border">
          <div class="w-14 h-14 mx-auto mb-5 rounded-2xl gradient-brand flex items-center justify-center">
            <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
            </svg>
          </div>
          <h3 class="font-display font-semibold text-lg text-white mb-2">Designed for Apple</h3>
          <p class="text-sm text-text-muted">Following Apple's Human Interface Guidelines to create apps that feel truly at home.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Latest Blog Posts -->
  {latestPosts.length > 0 && (
    <section class="py-20 sm:py-28 bg-bg">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-end justify-between mb-12">
          <div>
            <h2 class="font-display font-bold text-3xl sm:text-4xl text-white mb-2">Latest Posts</h2>
            <p class="text-text-muted">Thoughts on development, AI, and building native apps.</p>
          </div>
          <a href="/blog" class="hidden sm:inline-flex items-center gap-1 text-sm font-medium text-accent hover:gap-2 transition-all">
            View all
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>

        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8">
          {latestPosts.map((post) => (
            <a href={`/blog/${post.id}`} class="group rounded-2xl border border-border overflow-hidden hover:-translate-y-1 hover:shadow-xl transition-all duration-300">
              <div class="aspect-video bg-gradient-to-br from-accent/10 to-accent-blue/10">
                {post.data.coverImage && (
                  <img src={post.data.coverImage} alt={post.data.coverImageAlt || post.data.title} class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" />
                )}
              </div>
              <div class="p-6">
                <div class="flex items-center gap-2 mb-3">
                  {post.data.tags.slice(0, 2).map((tag) => (
                    <span class="px-2 py-0.5 rounded-full text-xs font-medium bg-accent/10 text-accent">{tag}</span>
                  ))}
                </div>
                <h3 class="font-display font-semibold text-lg text-white mb-2 group-hover:text-accent transition-colors line-clamp-2">{post.data.title}</h3>
                <p class="text-sm text-text-muted line-clamp-2 mb-4">{post.data.description}</p>
                <time class="text-xs text-text-muted">{new Intl.DateTimeFormat('en-US', { year: 'numeric', month: 'long', day: 'numeric' }).format(post.data.pubDate)}</time>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- CTA Section -->
  <section class="py-20 sm:py-28 gradient-brand relative overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-10 left-10 w-40 h-40 border border-white/20 rounded-full"></div>
      <div class="absolute bottom-10 right-10 w-60 h-60 border border-white/20 rounded-full"></div>
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-80 h-80 border border-white/10 rounded-full"></div>
    </div>
    <div class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="font-display font-bold text-3xl sm:text-4xl text-white mb-4">Got Questions? Get in Touch</h2>
      <p class="text-lg text-white/80 mb-8 max-w-xl mx-auto">
        Whether you need support, want to share feedback, or just want to say hi — we'd love to hear from you.
      </p>
      <a
        href="/contact"
        class="inline-flex items-center gap-2 px-8 py-4 rounded-full bg-white text-accent font-semibold text-base hover:bg-surface hover:scale-105 hover:shadow-lg transition-all duration-300"
      >
        Contact Us
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
        </svg>
      </a>
    </div>
  </section>
</PageLayout>
