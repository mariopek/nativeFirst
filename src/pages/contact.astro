---
import PageLayout from '../layouts/PageLayout.astro';
import ContactForm from '../components/contact/ContactForm';
---

<PageLayout title="Contact â€” NativeFirst">
  <!-- Hero Section -->
  <section class="relative py-20 sm:py-28 bg-surface overflow-hidden">
    <div class="absolute top-1/4 right-1/4 w-72 h-72 bg-accent/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-1/4 left-1/4 w-72 h-72 bg-cyan-500/10 rounded-full blur-3xl"></div>

    <div class="relative max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="font-display font-extrabold text-4xl sm:text-5xl text-white mb-4">
        Get in <span class="gradient-text">Touch</span>
      </h1>
      <p class="text-lg text-text-muted max-w-xl mx-auto">
        Have a question, need support, or just want to share feedback? We'd love to hear from you.
      </p>
    </div>
  </section>

  <!-- Contact Form Section -->
  <section class="py-16 sm:py-24 bg-bg">
    <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
      <ContactForm client:load />

      <div class="mt-12 text-center">
        <p class="text-text-muted text-sm">
          Or email us directly at
          <a
            href="mailto:support@nativefirstapp.com"
            class="text-accent hover:underline font-medium"
          >
            support@nativefirstapp.com
          </a>
        </p>
      </div>
    </div>
  </section>
</PageLayout>
