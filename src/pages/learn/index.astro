---
export const prerender = true;

import PageLayout from '../../layouts/PageLayout.astro';
import { getCollection } from 'astro:content';
import { SITE, COURSE, PREMIUM_COURSE } from '../../lib/constants';

const allLessons = await getCollection('course', ({ data }) => !data.draft);

const freeLessons = allLessons.filter((l) => l.data.courseSlug === 'vibe-code-native');
const premiumLessons = allLessons.filter((l) => l.data.courseSlug === 'ship-native');

const courses = [
  {
    ...COURSE,
    publishedLessons: freeLessons.length,
    publishedModules: [...new Set(freeLessons.map((l) => l.data.module))].length,
    href: `/learn/${COURSE.slug}`,
    badge: 'Free',
    badgeClass: 'gradient-brand text-white',
    level: 'Beginner',
    duration: '~2h',
    status: 'active' as const,
  },
  {
    ...PREMIUM_COURSE,
    publishedLessons: premiumLessons.length,
    publishedModules: [...new Set(premiumLessons.map((l) => l.data.module))].length,
    href: `/learn/${PREMIUM_COURSE.slug}`,
    badge: 'Premium',
    badgeClass: 'bg-gradient-to-r from-amber-500 to-orange-500 text-white',
    level: 'Intermediate',
    duration: '~6h',
    status: 'coming_soon' as const,
  },
];
---

<PageLayout
  title={`Learn — iOS Development Courses — ${SITE.name}`}
  description="Courses to learn iOS development with AI. Build real native apps using Swift, SwiftUI, and Claude Code — from beginner to production."
>
  <!-- Hero -->
  <section class="relative py-20 sm:py-28 overflow-hidden bg-bg">
    <div class="absolute inset-0 hero-gradient opacity-50"></div>
    <div class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <div class="inline-flex items-center gap-2 badge bg-accent/20 text-accent mb-6">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
        </svg>
        NativeFirst Academy
      </div>

      <h1 class="font-display font-black tracking-tight text-4xl sm:text-5xl md:text-6xl text-white mb-6 leading-tight">
        <span class="gradient-text">Learn to Build</span>
        <br />
        <span class="text-3xl sm:text-4xl md:text-5xl">Native iOS Apps with AI</span>
      </h1>

      <p class="text-lg sm:text-xl text-text-muted max-w-2xl mx-auto">
        Hands-on courses that teach you how to build production-quality iOS apps using AI-powered development workflows.
      </p>
    </div>
  </section>

  <!-- Courses Grid -->
  <section class="py-16 sm:py-20 bg-bg">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <p class="section-label text-text-muted text-center mb-4">Courses</p>
      <h2 class="font-display font-black tracking-tight text-2xl sm:text-3xl text-white mb-10 text-center">
        Our Courses
      </h2>

      <div class="grid gap-8 sm:grid-cols-1 lg:grid-cols-2">
        {courses.map((course) => {
          const isComingSoon = course.status === 'coming_soon';
          const Wrapper = isComingSoon ? 'div' : 'a';
          return (
            <Wrapper
              {...(!isComingSoon && { href: course.href })}
              class={`group card overflow-hidden flex flex-col ${isComingSoon ? 'opacity-70 cursor-default' : ''}`}
            >
              {/* Gradient top bar */}
              <div class={`h-1.5 ${course.isPremium ? 'bg-gradient-to-r from-amber-500 to-orange-500' : 'gradient-brand'}`} />

              <div class="flex-1 p-6 sm:p-8">
                {/* Badges */}
                <div class="flex items-center gap-2 mb-4">
                  {course.badge && (
                    <span class={`badge ${course.isPremium ? 'bg-gradient-to-r from-amber-500 to-orange-500 text-white' : 'bg-accent/15 text-accent'}`}>
                      {course.badge}
                    </span>
                  )}
                  <span class="badge bg-surface-2 text-text-muted">
                    {course.level}
                  </span>
                  {course.status === 'active' && (
                    <span class="badge bg-accent-green/10 text-accent-green">
                      <span class="status-dot bg-accent-green inline-block mr-1" style="width:6px;height:6px;" />
                      Active
                    </span>
                  )}
                  {isComingSoon && (
                    <span class="badge bg-amber-500/10 text-amber-400">
                      Coming Soon
                    </span>
                  )}
                </div>

                {/* Title & subtitle */}
                <h3 class={`font-display font-black tracking-tight text-2xl mb-1 transition-colors ${isComingSoon ? 'text-white/70' : 'text-white group-hover:text-accent'}`}>
                  {course.title}
                </h3>
                <p class={`text-sm font-mono font-medium mb-3 ${course.isPremium ? 'text-amber-400' : 'text-accent'}`}>
                  {course.subtitle}
                </p>

                {/* Description */}
                <p class="text-text-muted text-sm leading-relaxed mb-6">
                  {course.description}
                </p>

                {/* Stats */}
                <div class="flex items-center gap-4 text-sm font-mono text-text-muted">
                  <div class="flex items-center gap-1.5">
                    <svg class="w-4 h-4 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                    </svg>
                    <span class="text-white font-semibold">{course.publishedLessons}</span> lessons
                  </div>
                  <div class="flex items-center gap-1.5">
                    <svg class="w-4 h-4 text-accent-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                    </svg>
                    <span class="text-white font-semibold">{course.publishedModules}</span> modules
                  </div>
                  <div class="flex items-center gap-1.5">
                    <svg class="w-4 h-4 text-accent-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    {course.duration}
                  </div>
                  {course.isPremium && (
                    <div class="flex items-center gap-1.5 font-bold text-amber-400">
                      $79
                    </div>
                  )}
                </div>
              </div>

              {/* Footer */}
              <div class="px-6 sm:px-8 py-4 border-t border-border bg-surface-2/50 flex items-center justify-between">
                <span class={`text-sm font-bold uppercase tracking-wider transition-all inline-flex items-center gap-1.5 ${isComingSoon ? 'text-amber-400/60' : course.isPremium ? 'text-amber-400 group-hover:gap-2' : 'text-accent group-hover:gap-2'}`}>
                  {isComingSoon ? 'Coming Soon' : course.isPremium ? 'View Course' : 'Start Learning'}
                  {!isComingSoon && (
                    <svg class="w-4 h-4 group-hover:translate-x-0.5 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                    </svg>
                  )}
                </span>
                <span class="text-xs font-mono text-text-muted">
                  by {course.author}
                </span>
              </div>
            </Wrapper>
          );
        })}
      </div>
    </div>
  </section>
</PageLayout>
