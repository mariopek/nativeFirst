---
export const prerender = true;

import PageLayout from '../../layouts/PageLayout.astro';
import { SITE, PREMIUM_COURSE } from '../../lib/constants';
---

<PageLayout
  title={`${PREMIUM_COURSE.title} — Coming Soon — ${SITE.name}`}
  description={PREMIUM_COURSE.description}
>
  <!-- Breadcrumb -->
  <section class="bg-bg pt-6">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <nav class="flex items-center gap-2 text-sm font-mono text-text-muted">
        <a href="/learn" class="hover:text-accent transition-colors">Courses</a>
        <svg class="w-4 h-4 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
        <span class="text-white font-medium">{PREMIUM_COURSE.title}</span>
      </nav>
    </div>
  </section>

  <!-- Hero — Coming Soon -->
  <section class="relative py-28 sm:py-40 overflow-hidden bg-bg">
    <div class="absolute inset-0 bg-gradient-to-br from-amber-500/5 via-transparent to-orange-500/5"></div>
    <div class="relative max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <div class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full bg-amber-500/10 text-amber-400 text-sm font-mono font-medium mb-8">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
        </svg>
        Premium Course — Coming Soon
      </div>

      <h1 class="font-display font-black tracking-tight text-4xl sm:text-5xl md:text-6xl text-white mb-4 leading-tight">
        <span class="bg-gradient-to-r from-amber-400 to-orange-500 bg-clip-text text-transparent">{PREMIUM_COURSE.title}</span>
      </h1>
      <p class="text-xl sm:text-2xl font-mono text-amber-400/80 mb-6">
        {PREMIUM_COURSE.subtitle}
      </p>

      <p class="text-lg text-text-muted mb-10 max-w-2xl mx-auto leading-relaxed">
        {PREMIUM_COURSE.description}
      </p>

      <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mb-12">
        <a
          href="/learn/vibe-code-native"
          class="btn-primary text-lg px-8 py-4"
        >
          Start Free Course First
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
        <a href="/learn" class="btn-ghost">
          ← Back to Courses
        </a>
      </div>

      <!-- Teaser stats -->
      <div class="inline-flex items-center gap-6 text-sm font-mono text-text-muted">
        <div class="flex items-center gap-1.5">
          <svg class="w-4 h-4 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
          <span class="text-white font-semibold">{PREMIUM_COURSE.totalLessons}</span> lessons
        </div>
        <div class="flex items-center gap-1.5">
          <svg class="w-4 h-4 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
          </svg>
          <span class="text-white font-semibold">{PREMIUM_COURSE.modules.length}</span> modules
        </div>
        <div class="flex items-center gap-1.5">
          <svg class="w-4 h-4 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          ~6h
        </div>
      </div>
    </div>
  </section>
</PageLayout>
