---
export const prerender = true;

import PageLayout from '../../../layouts/PageLayout.astro';
import { SITE, PREMIUM_COURSE } from '../../../lib/constants';
import LoginModal from '../../../components/auth/LoginModal';
---

<PageLayout
  title={`Welcome to ${PREMIUM_COURSE.title} â€” ${SITE.name}`}
  description="Thank you for purchasing Ship Native! Log in to access your course."
>
  <section class="py-20 sm:py-28 bg-bg">
    <div class="max-w-lg mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <!-- Success icon -->
      <div class="w-20 h-20 rounded-2xl bg-gradient-to-br from-accent-yellow/50 to-accent/50 flex items-center justify-center mx-auto mb-8 shadow-lg shadow-amber-500/25">
        <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
      </div>

      <h1 class="font-display font-extrabold tracking-tight text-3xl sm:text-4xl text-white mb-4">
        Welcome to Ship Native!
      </h1>

      <p class="text-lg text-text-muted mb-8">
        Your purchase was successful. Log in with the email you used to purchase and you'll get instant access to all {PREMIUM_COURSE.totalLessons} lessons.
      </p>

      <!-- Login form -->
      <div class="max-w-sm mx-auto">
        <LoginModal
          client:load
          redirectTo="/learn/sn-architecture-for-real-projects"
        />
      </div>

      <!-- Back to course link -->
      <div class="mt-8">
        <a
          href={`/learn/${PREMIUM_COURSE.slug}`}
          class="inline-flex items-center gap-2 text-sm font-medium text-text-muted hover:text-accent-yellow transition-colors"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Back to course overview
        </a>
      </div>
    </div>
  </section>
</PageLayout>
