---
export const prerender = true;

import PageLayout from '../../../layouts/PageLayout.astro';
import { getCollection } from 'astro:content';
import { formatDate, slugify } from '../../../lib/utils';
import { BLOG_TAGS, SITE } from '../../../lib/constants';
import readingTime from 'reading-time';

export async function getStaticPaths() {
  const allPosts = await getCollection('blog', ({ data }) => !data.draft);

  // Get all unique tags from posts plus predefined tags
  const tagsFromPosts = new Set<string>();
  allPosts.forEach((post) => {
    post.data.tags.forEach((tag) => tagsFromPosts.add(tag));
  });

  // Also include predefined BLOG_TAGS (excluding 'All')
  const predefinedTags = BLOG_TAGS.filter((t) => t !== 'All');
  predefinedTags.forEach((tag) => tagsFromPosts.add(tag));

  return Array.from(tagsFromPosts).map((tag) => ({
    params: { tag: tag.toLowerCase().replace(/\s+/g, '-') },
    props: {
      tag,
      posts: allPosts
        .filter((post) =>
          post.data.tags.some(
            (t) => t.toLowerCase().replace(/\s+/g, '-') === tag.toLowerCase().replace(/\s+/g, '-')
          )
        )
        .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()),
    },
  }));
}

const { tag, posts } = Astro.props;
---

<PageLayout title={`Posts tagged "${tag}" â€” ${SITE.name}`} description={`All blog posts tagged with ${tag}.`}>
  <!-- Hero Section -->
  <section class="relative py-20 sm:py-28 bg-bg overflow-hidden">
    <div class="absolute top-1/4 right-1/4 w-72 h-72 bg-accent/20 rounded-full blur-3xl"></div>
    <div class="absolute bottom-1/4 left-1/4 w-72 h-72 bg-accent-blue/15 rounded-full blur-3xl"></div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <a
        href="/blog"
        class="inline-flex items-center gap-1 text-sm text-accent hover:gap-2 transition-all mb-6"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        All posts
      </a>
      <h1 class="font-display font-extrabold text-4xl sm:text-5xl text-white mb-4">
        Posts tagged with: <span class="gradient-text">{tag}</span>
      </h1>
      <p class="text-lg text-text-muted">
        {posts.length} {posts.length === 1 ? 'post' : 'posts'} found
      </p>
    </div>
  </section>

  <!-- Tag Filters -->
  <section class="bg-bg border-b border-border sticky top-16 lg:top-20 z-30">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center gap-2 py-4 overflow-x-auto scrollbar-hide">
        {BLOG_TAGS.map((t) => {
          const tagSlug = t.toLowerCase().replace(/\s+/g, '-');
          const currentSlug = tag.toLowerCase().replace(/\s+/g, '-');
          const isActive = tagSlug === currentSlug;

          return (
            <a
              href={t === 'All' ? '/blog' : `/blog/tag/${tagSlug}`}
              class:list={[
                'inline-flex items-center px-4 py-2 rounded-full text-sm font-medium whitespace-nowrap transition-all duration-200',
                isActive
                  ? 'gradient-brand text-white shadow-md shadow-accent/20'
                  : 'bg-surface-2 text-text-muted hover:bg-surface-2',
              ]}
            >
              {t}
            </a>
          );
        })}
      </div>
    </div>
  </section>

  <!-- Posts Grid -->
  <section class="py-16 sm:py-20 bg-bg">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      {posts.length === 0 ? (
        <div class="text-center py-20">
          <p class="text-text-muted text-lg mb-4">No posts found with this tag yet.</p>
          <a
            href="/blog"
            class="inline-flex items-center gap-2 text-sm font-medium text-accent hover:gap-3 transition-all"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            View all posts
          </a>
        </div>
      ) : (
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8">
          {posts.map((post) => {
            const rt = readingTime(post.body || '');
            return (
              <a
                href={`/blog/${post.id}`}
                class="group rounded-2xl border border-border bg-surface overflow-hidden hover:-translate-y-1 hover:shadow-xl hover:border-accent/40 transition-all duration-300"
              >
                <!-- Cover Image / Gradient Placeholder -->
                <div class="aspect-video bg-gradient-to-br from-accent/10 to-accent-blue/10 relative overflow-hidden">
                  {post.data.coverImage ? (
                    <img
                      src={post.data.coverImage}
                      alt={post.data.coverImageAlt || post.data.title}
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                    />
                  ) : (
                    <div class="absolute inset-0 flex items-center justify-center">
                      <svg class="w-12 h-12 text-accent/40" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
                      </svg>
                    </div>
                  )}
                </div>

                <!-- Card Content -->
                <div class="p-6">
                  <div class="flex items-center gap-2 mb-3 flex-wrap">
                    {post.data.tags.slice(0, 2).map((t) => (
                      <span class="px-2.5 py-0.5 rounded-full text-xs font-medium bg-accent/10 text-accent">
                        {t}
                      </span>
                    ))}
                  </div>

                  <h2 class="font-display font-semibold text-lg text-white mb-2 group-hover:text-accent transition-colors line-clamp-2">
                    {post.data.title}
                  </h2>

                  <p class="text-sm text-text-muted line-clamp-2 mb-4">
                    {post.data.description}
                  </p>

                  <div class="flex items-center justify-between text-xs text-text-muted">
                    <time datetime={post.data.pubDate.toISOString()}>
                      {formatDate(post.data.pubDate)}
                    </time>
                    <span>{rt.text}</span>
                  </div>
                </div>
              </a>
            );
          })}
        </div>
      )}
    </div>
  </section>
</PageLayout>
