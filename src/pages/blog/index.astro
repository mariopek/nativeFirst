---
export const prerender = true;

import PageLayout from '../../layouts/PageLayout.astro';
import BeachBot from '../../components/BeachBot.astro';
import { getCollection } from 'astro:content';
import { formatDate } from '../../lib/utils';
import { BLOG_TAGS, SITE, BLOG_ENGAGEMENT } from '../../lib/constants';
import readingTime from 'reading-time';

const allPosts = await getCollection('blog', ({ data }) => !data.draft);
const posts = allPosts.sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<PageLayout title={`Blog â€” ${SITE.name}`} description="Thoughts on native app development, SwiftUI, AI, and building great software for Apple platforms.">
  <!-- Hero Section -->
  <section class="relative py-20 sm:py-28 bg-bg overflow-hidden">
    <div class="absolute top-1/4 right-1/4 w-72 h-72 bg-accent/20 rounded-full blur-3xl"></div>
    <div class="absolute bottom-1/4 left-1/4 w-72 h-72 bg-accent-blue/15 rounded-full blur-3xl"></div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <BeachBot />

      <h1 class="font-display font-black tracking-tight text-4xl sm:text-5xl md:text-6xl text-white mb-4">
        Blog
      </h1>
      <p class="text-lg sm:text-xl text-text-muted max-w-2xl mx-auto">
        Thoughts on native app development, SwiftUI, AI, and the craft of building great software for Apple platforms.
      </p>
    </div>
  </section>

  <!-- Tag Filters -->
  <section class="bg-bg border-b border-border sticky top-16 lg:top-20 z-30">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center gap-2 py-4 overflow-x-auto scrollbar-hide">
        {BLOG_TAGS.map((tag) => (
          <a
            href={tag === 'All' ? '/blog' : `/blog/tag/${tag.toLowerCase().replace(/\s+/g, '-')}`}
            class:list={[
              'inline-flex items-center px-4 py-2 rounded-full text-sm font-medium font-nav whitespace-nowrap transition-all duration-200',
              tag === 'All'
                ? 'gradient-brand text-white shadow-md shadow-accent/20'
                : 'bg-surface-2 text-text-muted hover:bg-border hover:text-white',
            ]}
          >
            {tag}
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Posts Grid -->
  <section class="py-16 sm:py-20 bg-bg">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      {posts.length === 0 ? (
        <div class="text-center py-20">
          <p class="text-text-muted text-lg">No posts yet. Check back soon!</p>
        </div>
      ) : (
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8">
          {posts.map((post) => {
            const rt = readingTime(post.body || '');
            const engagement = BLOG_ENGAGEMENT[post.id] || { likes: 0, comments: [] };
            return (
              <a
                href={`/blog/${post.id}`}
                class="group card overflow-hidden"
              >
                <!-- Cover Image / Gradient Placeholder -->
                <div class="aspect-video bg-gradient-to-br from-accent/10 to-accent-blue/10 relative overflow-hidden">
                  {post.data.coverImage ? (
                    <img
                      src={post.data.coverImage}
                      alt={post.data.coverImageAlt || post.data.title}
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                    />
                  ) : (
                    <div class="absolute inset-0 flex items-center justify-center">
                      <svg class="w-12 h-12 text-accent/40" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
                      </svg>
                    </div>
                  )}
                </div>

                <!-- Card Content -->
                <div class="p-6">
                  <!-- Tags -->
                  <div class="flex items-center gap-2 mb-3 flex-wrap">
                    {post.data.tags.slice(0, 2).map((tag) => (
                      <span class="tag">
                        {tag}
                      </span>
                    ))}
                  </div>

                  <!-- Title -->
                  <h2 class="font-display font-semibold text-lg text-white mb-2 group-hover:text-accent transition-colors line-clamp-2">
                    {post.data.title}
                  </h2>

                  <!-- Description -->
                  <p class="text-sm text-text-muted line-clamp-2 mb-4">
                    {post.data.description}
                  </p>

                  <!-- Author & Meta -->
                  <div class="flex items-center justify-between text-xs text-text-muted">
                    <div class="flex items-center gap-2">
                      <div class="w-5 h-5 rounded-full gradient-brand flex items-center justify-center flex-shrink-0">
                        <span class="text-white text-[8px] font-bold">{post.data.author.charAt(0)}</span>
                      </div>
                      <span class="font-medium text-text-muted">{post.data.author}</span>
                    </div>
                    <span>{rt.text}</span>
                  </div>
                  <div class="flex items-center justify-between text-xs text-text-muted mt-2">
                    <time datetime={post.data.pubDate.toISOString()}>
                      {formatDate(post.data.pubDate)}
                    </time>
                    {(engagement.likes > 0 || engagement.comments.length > 0) && (
                      <div class="flex items-center gap-3">
                        {engagement.likes > 0 && (
                          <span class="flex items-center gap-1">
                            <svg class="w-3.5 h-3.5 text-pink-400" fill="currentColor" viewBox="0 0 24 24">
                              <path d="M11.645 20.91l-.007-.003-.022-.012a15.247 15.247 0 01-.383-.218 25.18 25.18 0 01-4.244-3.17C4.688 15.36 2.25 12.174 2.25 8.25 2.25 5.322 4.714 3 7.688 3A5.5 5.5 0 0112 5.052 5.5 5.5 0 0116.313 3c2.973 0 5.437 2.322 5.437 5.25 0 3.925-2.438 7.111-4.739 9.256a25.175 25.175 0 01-4.244 3.17 15.247 15.247 0 01-.383.219l-.022.012-.007.004-.003.001a.752.752 0 01-.704 0l-.003-.001z" />
                            </svg>
                            {engagement.likes}
                          </span>
                        )}
                        {engagement.comments.length > 0 && (
                          <span class="flex items-center gap-1">
                            <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" d="M7.5 8.25h9m-9 3H12m-9.75 1.51c0 1.6 1.123 2.994 2.707 3.227 1.129.166 2.27.293 3.423.379.35.026.67.21.865.501L12 21l2.755-4.133a1.14 1.14 0 01.865-.501 48.172 48.172 0 003.423-.379c1.584-.233 2.707-1.626 2.707-3.228V6.741c0-1.602-1.123-2.995-2.707-3.228A48.394 48.394 0 0012 3c-2.392 0-4.744.175-7.043.513C3.373 3.746 2.25 5.14 2.25 6.741v6.018z" />
                            </svg>
                            {engagement.comments.length}
                          </span>
                        )}
                      </div>
                    )}
                  </div>
                </div>
              </a>
            );
          })}
        </div>
      )}
    </div>
  </section>
</PageLayout>
